---
import ViewportSwitcher from './ViewportSwitcher.svelte';

interface Props {
  visual: string;
  class?: string;
}

const { visual, class: className } = Astro.props;
---

<div class:list={['rounded-2xl border border-neutral-200 dark:border-neutral-700/50 bg-white/50 dark:bg-neutral-900/40 backdrop-blur-sm p-6 md:p-8 flex items-center justify-center min-h-[280px] md:min-h-[320px]', className]}>

  {visual === 'viewport-viewer' && (
    <ViewportSwitcher client:visible />
  )}

  {visual === 'unified-dashboard' && (
    <!-- Unified Dashboard — pinned branch cards with provider logos and bell toggles -->
    <div class="flex flex-col gap-2.5 w-full max-w-[320px]">
      {/* Branch filter chips */}
      <div class="flex items-center gap-1.5 mb-1">
        <span class="text-[10px] font-heading font-semibold px-2.5 py-1 rounded-full bg-primary/15 text-primary dark:bg-primary/20">All</span>
        <span class="text-[10px] font-heading font-semibold px-2.5 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 text-neutral-400 dark:text-neutral-500">main</span>
        <span class="text-[10px] font-heading font-semibold px-2.5 py-1 rounded-full bg-neutral-100 dark:bg-neutral-800 text-neutral-400 dark:text-neutral-500">feature/*</span>
      </div>

      {/* Branch cards */}
      {[
        { branch: 'main', provider: 'Cloudflare', status: 'Ready', statusColor: 'bg-emerald-500', time: '2m ago', watched: true },
        { branch: 'feature/checkout', provider: 'Vercel', status: 'Building', statusColor: 'bg-orange-400', time: 'Just now', watched: true },
        { branch: 'staging', provider: 'Netlify', status: 'Ready', statusColor: 'bg-emerald-500', time: '14m ago', watched: false },
        { branch: 'fix/nav-overflow', provider: 'GitHub', status: 'Failed', statusColor: 'bg-red-500', time: '1h ago', watched: false },
      ].map(pin => (
        <div class="rounded-xl border border-neutral-200 dark:border-neutral-700/50 bg-white dark:bg-neutral-800/80 px-3.5 py-2.5 shadow-sm flex items-center gap-3">
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-2 mb-0.5">
              <!-- Pin icon -->
              <svg class="w-3 h-3 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                <path d="M16 12V4H17V2H7V4H8V12L6 14V16H11.2V22H12.8V16H18V14L16 12Z" />
              </svg>
              <span class="text-[11px] font-semibold text-neutral-700 dark:text-neutral-300 truncate">{pin.branch}</span>
            </div>
            <div class="flex items-center gap-1.5">
              <!-- Status dot -->
              <div class:list={['w-1.5 h-1.5 rounded-full flex-shrink-0', pin.statusColor, pin.status === 'Building' && 'animate-pulse']} />
              {/* Provider icon */}
              {pin.provider === 'Cloudflare' && (
                <svg class="w-3 h-3 text-orange-400 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M16.5088 16.8447c.1475-.5068.0908-.9707-.1553-1.3154-.2246-.3164-.6045-.499-1.0615-.5205l-8.6592-.1123a.1559.1559 0 0 1-.1333-.0713c-.0283-.042-.0351-.0986-.021-.1553.0278-.084.1123-.1484.2036-.1562l8.7359-.1123c1.0351-.0489 2.1601-.8868 2.5537-1.9136l.499-1.3013c.0215-.0561.0293-.1128.0147-.168-.5625-2.5463-2.835-4.4453-5.5499-4.4453-2.5039 0-4.6284 1.6177-5.3876 3.8614-.4927-.3658-1.1187-.5625-1.794-.499-1.2026.119-2.1665 1.083-2.2861 2.2856-.0283.31-.0069.6128.0635.894C1.5683 13.171 0 14.7754 0 16.752c0 .1748.0142.3515.0352.5273.0141.083.0844.1475.1689.1475h15.9814c.0909 0 .1758-.0645.2032-.1553l.12-.4268zm2.7568-5.5634c-.0771 0-.1611 0-.2383.0112-.0566 0-.1054.0415-.127.0976l-.3378 1.1744c-.1475.5068-.0918.9707.1543 1.3164.2256.3164.6055.498 1.0625.5195l1.8437.1133c.0557 0 .1055.0263.1329.0703.0283.043.0351.1074.0214.1562-.0283.084-.1132.1485-.204.1553l-1.921.1123c-1.041.0488-2.1582.8867-2.5527 1.914l-.1406.3585c-.0283.0713.0215.1416.0986.1416h6.5977c.0771 0 .1474-.0489.169-.126.1122-.4082.1757-.837.1757-1.2803 0-2.6025-2.125-4.727-4.7344-4.727" />
                </svg>
              )}
              {pin.provider === 'Vercel' && (
                <svg class="w-3 h-3 text-neutral-700 dark:text-white flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                  <path d="m12 1.608 12 20.784H0Z" />
                </svg>
              )}
              {pin.provider === 'Netlify' && (
                <svg class="w-3 h-3 text-teal-400 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M6.49 19.04h-.23L5.13 17.9v-.23l1.73-1.71h1.2l.15.15v1.2L6.5 19.04ZM5.13 6.31V6.1l1.13-1.13h.23L8.2 6.68v1.2l-.15.15h-1.2L5.13 6.31Zm9.96 9.09h-1.65l-.14-.13v-3.83c0-.68-.27-1.2-1.1-1.23-.42 0-.9 0-1.43.02l-.07.08v4.96l-.14.14H8.9l-.13-.14V8.73l.13-.14h3.7a2.6 2.6 0 0 1 2.61 2.6v4.08l-.13.14Zm-8.37-2.44H.14L0 12.82v-1.64l.14-.14h6.58l.14.14v1.64l-.14.14Zm17.14 0h-6.58l-.14-.14v-1.64l.14-.14h6.58l.14.14v1.64l-.14.14ZM11.05 6.55V1.64l.14-.14h1.65l.14.14v4.9l-.14.14h-1.65l-.14-.13Zm0 15.81v-4.9l.14-.14h1.65l.14.13v4.91l-.14.14h-1.65l-.14-.14Z" />
                </svg>
              )}
              {pin.provider === 'GitHub' && (
                <svg class="w-3 h-3 text-neutral-600 dark:text-neutral-400 flex-shrink-0" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12" />
                </svg>
              )}
              <span class="text-[10px] font-mono text-neutral-400 dark:text-neutral-500">{pin.provider} · {pin.status}</span>
              <span class="text-[9px] text-neutral-300 dark:text-neutral-600 ml-auto">{pin.time}</span>
            </div>
          </div>
          <div class="flex-shrink-0">
            <svg class:list={['w-4 h-4', pin.watched ? 'text-primary' : 'text-neutral-300 dark:text-neutral-600']} fill={pin.watched ? 'currentColor' : 'none'} viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 8.967 0 0118 9.75v-.7V9A6 6 0 006 9v.75a8.967 8.967 0 01-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 01-5.714 0m5.714 0a3 3 0 11-5.714 0" />
            </svg>
          </div>
        </div>
      ))}
    </div>
  )}

  {visual === 'push-notifications' && (
    <!-- Push Notifications — iPhone top half with notification banners -->
    <div class="w-full max-w-[280px] relative mx-auto">
      <!-- iPhone frame — only top portion -->
      <div class="rounded-t-[24px] border border-b-0 border-neutral-200 dark:border-neutral-700 bg-gradient-to-b from-neutral-100 to-neutral-50 dark:from-neutral-800 dark:to-neutral-900 shadow-lg overflow-hidden">
        <!-- Status bar -->
        <div class="flex items-center justify-between px-6 pt-3 pb-1">
          <span class="text-[10px] font-semibold text-neutral-700 dark:text-neutral-300">9:41</span>
          <div class="w-20 h-5 bg-neutral-900 dark:bg-neutral-700 rounded-full mx-auto"></div>
          <div class="flex items-center gap-1">
            <svg class="w-3 h-3 text-neutral-600 dark:text-neutral-400" fill="currentColor" viewBox="0 0 24 24"><path d="M1 9l2 2c4.97-4.97 13.03-4.97 18 0l2-2C16.93 2.93 7.08 2.93 1 9zm8 8l3 3 3-3a4.237 4.237 0 00-6 0zm-4-4l2 2a7.074 7.074 0 0110 0l2-2C15.14 9.14 8.87 9.14 5 13z"/></svg>
            <svg class="w-3 h-3 text-neutral-600 dark:text-neutral-400" fill="currentColor" viewBox="0 0 24 24"><path d="M15.67 4H14V2h-4v2H8.33C7.6 4 7 4.6 7 5.33v15.33C7 21.4 7.6 22 8.33 22h7.33c.74 0 1.34-.6 1.34-1.33V5.33C17 4.6 16.4 4 15.67 4z"/></svg>
          </div>
        </div>

        <!-- Lock screen time -->
        <div class="text-center pt-2 pb-4">
          <div class="text-[32px] font-light text-neutral-800 dark:text-neutral-200 leading-none">9:41</div>
          <div class="text-[9px] text-neutral-400 dark:text-neutral-500 mt-1">Saturday, 22 February</div>
        </div>

        <!-- Notification banners -->
        <div class="px-3 pb-3 space-y-2">
          {[
            { title: 'Build succeeded — main', action: 'Tap to open preview', time: '2m ago', status: 'text-primary/70 dark:text-primary/60' },
            { title: 'Build started — feature/checkout', action: 'Tap to open preview', time: '30s ago', status: 'text-neutral-400 dark:text-neutral-500' },
            { title: 'Build failed — fix/nav-overflow', action: 'Tap to view details', time: '1h ago', status: 'text-red-400/70 dark:text-red-400/60' },
          ].map(notif => (
            <div class="rounded-2xl bg-white/80 dark:bg-white/10 backdrop-blur-sm px-3.5 py-2.5 shadow-sm border border-white/50 dark:border-white/5">
              <div class="flex items-start gap-2.5">
                <!-- Viewpo app icon -->
                <div class="w-6 h-6 rounded-lg bg-primary/15 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <span class="text-[9px] font-bold text-primary">V</span>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <span class="text-[11px] font-semibold text-neutral-800 dark:text-neutral-200">Viewpo</span>
                    <span class="text-[9px] text-neutral-400 dark:text-neutral-500">{notif.time}</span>
                  </div>
                  <p class="text-[10px] font-medium text-neutral-700 dark:text-neutral-300 leading-tight mt-0.5">{notif.title}</p>
                  <p class:list={['text-[9px] leading-tight mt-0.5', notif.status]}>{notif.action}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
      <!-- Fade-out at bottom edge -->
      <div class="absolute bottom-0 left-0 right-0 h-10 bg-gradient-to-t from-white/50 dark:from-neutral-900/50 to-transparent pointer-events-none"></div>
    </div>
  )}

  {visual === 'share-links' && (
    <!-- Share Links & QR Codes — QR code + copy link + link type tabs -->
    <div class="flex flex-col items-center gap-4">
      <!-- Link type tabs (static visual — shows the two types) -->
      <div class="flex rounded-lg border border-neutral-200 dark:border-neutral-700 overflow-hidden">
        <span class="text-[10px] font-heading font-semibold px-3 py-1.5 bg-primary/10 text-primary dark:bg-primary/15 border-r border-neutral-200 dark:border-neutral-700">Specific deploy</span>
        <span class="text-[10px] font-heading font-semibold px-3 py-1.5 text-neutral-400 dark:text-neutral-500">Latest for branch</span>
      </div>

      <div class="flex items-center gap-5">
        <!-- QR code -->
        <div class="w-28 h-28 rounded-xl bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 p-3 shadow-sm">
          <svg viewBox="0 0 100 100" class="w-full h-full text-neutral-800 dark:text-neutral-200">
            <rect x="5" y="5" width="25" height="25" rx="3" fill="currentColor"/>
            <rect x="70" y="5" width="25" height="25" rx="3" fill="currentColor"/>
            <rect x="5" y="70" width="25" height="25" rx="3" fill="currentColor"/>
            <rect x="10" y="10" width="15" height="15" rx="2" fill="currentColor" opacity="0.3"/>
            <rect x="75" y="10" width="15" height="15" rx="2" fill="currentColor" opacity="0.3"/>
            <rect x="10" y="75" width="15" height="15" rx="2" fill="currentColor" opacity="0.3"/>
            <rect x="35" y="5" width="8" height="8" rx="1" fill="currentColor" opacity="0.7"/>
            <rect x="48" y="5" width="8" height="8" rx="1" fill="currentColor" opacity="0.5"/>
            <rect x="35" y="18" width="8" height="8" rx="1" fill="currentColor" opacity="0.6"/>
            <rect x="48" y="18" width="8" height="8" rx="1" fill="currentColor" opacity="0.8"/>
            <rect x="57" y="18" width="8" height="8" rx="1" fill="currentColor" opacity="0.4"/>
            <rect x="35" y="35" width="8" height="8" rx="1" fill="currentColor" opacity="0.5"/>
            <rect x="48" y="35" width="8" height="8" rx="1" fill="currentColor" opacity="0.7"/>
            <rect x="57" y="35" width="8" height="8" rx="1" fill="currentColor" opacity="0.6"/>
            <rect x="70" y="35" width="8" height="8" rx="1" fill="currentColor" opacity="0.5"/>
            <rect x="83" y="35" width="8" height="8" rx="1" fill="currentColor" opacity="0.8"/>
            <rect x="5" y="48" width="8" height="8" rx="1" fill="currentColor" opacity="0.6"/>
            <rect x="18" y="48" width="8" height="8" rx="1" fill="currentColor" opacity="0.4"/>
            <rect x="35" y="48" width="8" height="8" rx="1" fill="currentColor" opacity="0.7"/>
            <rect x="57" y="48" width="8" height="8" rx="1" fill="currentColor" opacity="0.5"/>
            <rect x="70" y="48" width="8" height="8" rx="1" fill="currentColor" opacity="0.6"/>
            <rect x="83" y="48" width="8" height="8" rx="1" fill="currentColor" opacity="0.7"/>
            <rect x="48" y="57" width="8" height="8" rx="1" fill="currentColor" opacity="0.5"/>
            <rect x="57" y="57" width="8" height="8" rx="1" fill="currentColor" opacity="0.8"/>
            <rect x="35" y="70" width="8" height="8" rx="1" fill="currentColor" opacity="0.6"/>
            <rect x="48" y="70" width="8" height="8" rx="1" fill="currentColor" opacity="0.4"/>
            <rect x="70" y="70" width="8" height="8" rx="1" fill="currentColor" opacity="0.7"/>
            <rect x="83" y="70" width="8" height="8" rx="1" fill="currentColor" opacity="0.5"/>
            <rect x="35" y="83" width="8" height="8" rx="1" fill="currentColor" opacity="0.8"/>
            <rect x="57" y="83" width="8" height="8" rx="1" fill="currentColor" opacity="0.6"/>
            <rect x="70" y="83" width="8" height="8" rx="1" fill="currentColor" opacity="0.4"/>
            <rect x="83" y="83" width="8" height="8" rx="1" fill="currentColor" opacity="0.7"/>
          </svg>
        </div>

        <!-- Link + copy button -->
        <div class="flex flex-col gap-2.5">
          <!-- Copy link bar -->
          <div class="flex items-center gap-2 rounded-lg border border-neutral-200 dark:border-neutral-700 bg-white dark:bg-neutral-800 px-3 py-2 shadow-sm">
            <!-- Link icon -->
            <svg class="w-4 h-4 text-neutral-400 dark:text-neutral-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
            </svg>
            <span class="text-[10px] font-mono text-neutral-400 dark:text-neutral-500 truncate">viewpo.io/s/a8f3c2...</span>
            <!-- Copy button -->
            <div class="flex-shrink-0 w-6 h-6 rounded-md bg-primary/10 flex items-center justify-center">
              <svg class="w-3.5 h-3.5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0013.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 01-.75.75H9.75a.75.75 0 01-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 01-2.25 2.25H6.75A2.25 2.25 0 014.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 011.927-.184" />
              </svg>
            </div>
          </div>

          <!-- "or scan" divider -->
          <div class="flex items-center gap-2">
            <div class="flex-1 h-px bg-neutral-200 dark:bg-neutral-700"></div>
            <span class="text-[9px] text-neutral-300 dark:text-neutral-600">or scan</span>
            <div class="flex-1 h-px bg-neutral-200 dark:bg-neutral-700"></div>
          </div>
        </div>
      </div>

      <!-- No account needed badge -->
      <div class="flex items-center gap-1.5 px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20">
        <svg class="w-3.5 h-3.5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-[11px] font-heading font-semibold text-emerald-600 dark:text-emerald-400">No account needed to view</span>
      </div>
    </div>
  )}

  {visual === 'review-approval' && (
    <!-- Review & Approval — comment types + approval buttons -->
    <div class="flex flex-col gap-2.5 w-full max-w-[300px]">
      <!-- Comment 1 — DOM-anchored (pin icon) -->
      <div class="rounded-xl border border-neutral-200 dark:border-neutral-700/50 bg-white dark:bg-neutral-800/80 px-3.5 py-3 shadow-sm">
        <div class="flex items-start gap-2.5">
          <svg class="w-4 h-4 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
          </svg>
          <div class="min-w-0">
            <span class="text-[11px] font-semibold text-neutral-600 dark:text-neutral-400 block">Sarah · Designer</span>
            <span class="text-[10px] text-neutral-400 dark:text-neutral-500 leading-tight block mt-0.5">Hero looks great on mobile — spacing is perfect</span>
          </div>
        </div>
      </div>

      <!-- Comment 2 — General thread (chat icon) -->
      <div class="rounded-xl border border-neutral-200 dark:border-neutral-700/50 bg-white dark:bg-neutral-800/80 px-3.5 py-3 shadow-sm">
        <div class="flex items-start gap-2.5">
          <svg class="w-4 h-4 text-sky-400 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm-11.25 6L3 20.25V5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25v10.5A2.25 2.25 0 0118.75 18H8.625z" />
          </svg>
          <div class="min-w-0">
            <span class="text-[11px] font-semibold text-neutral-600 dark:text-neutral-400 block">Alex · PM</span>
            <span class="text-[10px] text-neutral-400 dark:text-neutral-500 leading-tight block mt-0.5">Can we bump the heading size? Client asked for larger</span>
          </div>
        </div>
      </div>

      <!-- Comment 3 — Client via share link -->
      <div class="rounded-xl border border-neutral-200 dark:border-neutral-700/50 bg-white dark:bg-neutral-800/80 px-3.5 py-3 shadow-sm">
        <div class="flex items-start gap-2.5">
          <svg class="w-4 h-4 text-secondary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
          </svg>
          <div class="min-w-0">
            <span class="text-[11px] font-semibold text-neutral-600 dark:text-neutral-400 block">Client <span class="text-[9px] font-normal text-neutral-300 dark:text-neutral-600">via share link</span></span>
            <span class="text-[10px] text-neutral-400 dark:text-neutral-500 leading-tight block mt-0.5">Looks good! Just the one change then we're good to go</span>
          </div>
        </div>
      </div>

      <!-- Metadata + Approval buttons -->
      <div class="flex items-center justify-between pt-1">
