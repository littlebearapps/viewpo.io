---
import Button from './Button.astro';
import PersonaDock from './PersonaDock.svelte';
import PhoneDisplay from './PhoneDisplay.svelte';
---

<section class="relative overflow-hidden min-h-[85vh] flex items-center pt-20 md:pt-24 lg:pt-28 pb-16 md:pb-20">
  <!-- Ambient glow orbs -->
  <div class="pointer-events-none absolute -top-40 -left-40 w-[500px] h-[500px] rounded-full bg-primary/20 blur-[120px] dark:bg-primary/10" aria-hidden="true"></div>
  <div class="pointer-events-none absolute -bottom-20 -right-32 w-[400px] h-[400px] rounded-full bg-secondary/15 blur-[100px] dark:bg-secondary/[0.08]" aria-hidden="true"></div>

  <div class="max-w-7xl mx-auto px-6 w-full">
    <!-- 2-column grid, vertically centred -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

      <!-- LEFT: The Control Centre -->
      <div class="text-center lg:text-left order-2 lg:order-1">
        <!-- Badge -->
        <a href="#platforms" class="hero-entrance inline-flex items-center gap-2 bg-primary/10 text-primary dark:text-indigo-300 text-sm font-medium px-4 py-1.5 rounded-full mb-6 hover:bg-primary/15 transition-colors">
          <svg class="w-4 h-4 text-foreground/70 dark:text-white/70" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
          </svg>
          Join the beta — iOS, iPadOS &amp; macOS
        </a>

        <!-- H1 -->
        <h1 class="hero-entrance hero-entrance-delay-1 font-heading font-bold text-4xl md:text-5xl leading-tight tracking-tight mb-4 text-foreground dark:text-white">
          Your Website Updates. Viewed Instantly. Anywhere.
        </h1>

        <!-- Subhead -->
        <p class="hero-entrance hero-entrance-delay-2 text-lg text-foreground/50 dark:text-neutral-400 mt-2 mb-8 max-w-lg mx-auto lg:mx-0 leading-relaxed">
          Verify responsive layouts, validate designs, share updates, and get approval from stakeholders — without opening your laptop.
        </p>

        <!-- CTAs -->
        <div class="hero-entrance hero-entrance-delay-3 flex flex-col sm:flex-row items-center lg:items-start justify-center lg:justify-start gap-3 mb-10">
          <button type="button" data-open-signup class="inline-flex items-center justify-center gap-2 font-heading font-medium rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 hover:scale-[1.02] active:scale-[0.98] px-7 py-3.5 text-base bg-primary text-white hover:bg-primary-hover focus:ring-primary shadow-md hover:shadow-lg plausible-event-name=CTA+Get+Early+Access">
            Get Early Access
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </button>
          <Button href="#how-it-works" variant="ghost" size="md">
            Watch Demo
          </Button>
        </div>

        <!-- Vertical Command Centre (desktop only) -->
        <div class="hero-entrance hero-entrance-delay-4 hidden lg:block">
          <PersonaDock client:visible layout="sidebar" />
        </div>
      </div>

      <!-- RIGHT: The Visual Engine -->
      <div class="order-1 lg:order-2 relative flex items-center justify-center">
        <!-- Phone + Floating Logos container -->
        <div class="hero-entrance hero-entrance-delay-4 relative">

          <!-- Floating Integration Logos -->
          <div class="hidden md:block" aria-hidden="true">
            <!-- GitHub — top left -->
            <div class="absolute -top-6 -left-6 lg:-left-10 z-0 float-slow">
              <div class="w-12 h-12 lg:w-14 lg:h-14 rounded-2xl bg-white/10 dark:bg-white/[0.07] backdrop-blur-sm border border-foreground/10 dark:border-white/10 shadow-lg flex items-center justify-center">
                <svg class="w-7 h-7 lg:w-8 lg:h-8 text-foreground dark:text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
            </div>

            <!-- Vercel — top right -->
            <div class="absolute -top-8 -right-4 lg:-right-8 z-0 float-slow-reverse">
              <div class="w-12 h-12 lg:w-14 lg:h-14 rounded-2xl bg-white/10 dark:bg-white/[0.07] backdrop-blur-sm border border-foreground/10 dark:border-white/10 shadow-lg flex items-center justify-center">
                <svg class="w-6 h-6 lg:w-7 lg:h-7 text-foreground dark:text-white" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 1L24 22H0L12 1z"/>
                </svg>
              </div>
            </div>

            <!-- Cloudflare — bottom left -->
            <div class="absolute -bottom-4 -left-4 lg:-left-6 z-0 float-slow-reverse" style="animation-delay: -2s;">
              <div class="w-12 h-12 lg:w-14 lg:h-14 rounded-2xl bg-white/10 dark:bg-white/[0.07] backdrop-blur-sm border border-foreground/10 dark:border-white/10 shadow-lg flex items-center justify-center">
                <svg class="w-7 h-7 lg:w-8 lg:h-8 text-orange-400" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M16.5093 16.8027c.1577-.5493.0986-.9853-.1534-1.3453-.2267-.3307-.622-.5253-1.0787-.5693l-9.1973-.1227c-.0453-.0013-.0907-.008-.1333-.02-.1267-.068-.1734-.1987-.1454-.3147.0174-.0653.0574-.124.1134-.164.0667-.0467.148-.072.2294-.068l9.268.124c.9947.0293 2.068-.7907 2.444-1.8707l.48-1.3773c.0226-.0653.0333-.1347.032-.2027-.4267-3.9933-3.876-7.0973-8.024-7.0973C5.5733 4.1207 1.344 8.0413.6173 13.0933c-.5093-.3773-1.1413-.5907-1.832-.5413-1.224.088-2.2173 1.0587-2.3173 2.2813-.0414.5067.0666.984.2826 1.3907C-4.2387 16.44-4.9387 17.3-4.9387 18.34c0 .052.0014.1053.004.1573.0174.1627.1534.2867.316.2867h20.7947c.1893 0 .3466-.1413.3786-.332l.0054-.036z"/>
                </svg>
              </div>
            </div>

            <!-- Netlify — bottom right -->
            <div class="absolute -bottom-2 -right-6 lg:-right-10 z-0 float-slow" style="animation-delay: -3s;">
              <div class="w-12 h-12 lg:w-14 lg:h-14 rounded-2xl bg-white/10 dark:bg-white/[0.07] backdrop-blur-sm border border-foreground/10 dark:border-white/10 shadow-lg flex items-center justify-center">
                <svg class="w-6 h-6 lg:w-7 lg:h-7 text-teal-400" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.3877 10.5278L13.2908 6.41525L16.6516 3.05443 17.3877 3.79443V10.5278zM6.48077 12.0278l5.3816-5.3816 4.2448 4.2476H6.48077zm10.5184-.136l-4.0728 4.0724-5.5468-5.5464h1.302l4.2448 4.2476 4.0728-2.7736zm-3.2096 7.3392l-4.9232-4.924 4.924-4.924 4.924 4.924-4.9248 4.924zM3.79043 17.3877V3.05443l9.09737 9.09737-9.09737 5.236z"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- The Phone Display (Svelte — cross-fading screens) -->
          <div class="relative z-10">
            <PhoneDisplay client:visible />
          </div>

          <!-- Ambient glow behind device -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] rounded-full bg-primary/15 blur-[120px] -z-10 pointer-events-none" aria-hidden="true"></div>
        </div>
      </div>

    </div>

    <!-- Mobile carousel (below phone, only on mobile) -->
    <div class="lg:hidden mt-8">
      <PersonaDock client:visible layout="mobile" />
    </div>
  </div>
</section>
