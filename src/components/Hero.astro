---
import Button from './Button.astro';
---

<section class="relative overflow-hidden py-20 md:py-28">
  <!-- Ambient glow orbs -->
  <div class="pointer-events-none absolute -top-40 -left-40 w-[500px] h-[500px] rounded-full bg-primary/20 blur-[120px] dark:bg-primary/10" aria-hidden="true"></div>
  <div class="pointer-events-none absolute -bottom-20 -right-32 w-[400px] h-[400px] rounded-full bg-secondary/15 blur-[100px] dark:bg-secondary/[0.08]" aria-hidden="true"></div>

  <!-- Floating decorative shapes -->
  <div class="pointer-events-none absolute top-20 right-[15%] w-4 h-4 rounded-full border-2 border-primary/20 float-slow hidden md:block" aria-hidden="true"></div>
  <div class="pointer-events-none absolute bottom-32 left-[10%] w-3 h-3 bg-secondary/20 rounded float-slow-reverse hidden md:block" aria-hidden="true"></div>
  <div class="pointer-events-none absolute top-1/2 right-[8%] w-2 h-2 bg-primary/15 rounded-full float-slow hidden lg:block" aria-hidden="true"></div>

  <div class="container-wide">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Text column -->
      <div class="text-center lg:text-left">
        <!-- Badge -->
        <div class="hero-entrance inline-flex items-center gap-2 bg-primary/10 text-primary dark:text-indigo-300 text-sm font-medium px-4 py-1.5 rounded-full mb-8">
          <span class="w-2 h-2 bg-success rounded-full animate-pulse"></span>
          Join the beta — iOS, iPadOS &amp; macOS
        </div>

        <!-- Headline -->
        <h1 class="hero-entrance hero-entrance-delay-1 font-heading font-bold text-4xl md:text-5xl lg:text-6xl leading-tight tracking-tight mb-6">
          Instantly preview your website at
          <span class="gradient-text-primary">any resolution.</span>
          From any device. Even your phone.
        </h1>

        <!-- Subheading -->
        <p class="hero-entrance hero-entrance-delay-2 text-lg md:text-xl text-foreground/60 max-w-2xl mx-auto lg:mx-0 mb-10 leading-relaxed">
          Push a change, check it instantly. Viewpo shows your website at any screen size — on whatever device you're holding — and pulls together deploy previews from Cloudflare Pages, GitHub Pages, Vercel, and Netlify the moment they go live.
        </p>

        <!-- CTAs -->
        <div class="hero-entrance hero-entrance-delay-3 flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
          <button type="button" data-open-signup class="inline-flex items-center justify-center gap-2 font-heading font-medium rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 hover:scale-[1.02] active:scale-[0.98] px-8 py-4 text-lg bg-primary text-white hover:bg-primary-hover focus:ring-primary shadow-md hover:shadow-lg plausible-event-name=CTA+Join+Beta">
            Join the Beta
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
          </button>
          <Button href="#features" variant="outline" size="lg">
            See How It Works
          </Button>
        </div>
      </div>

      <!-- Phone mockup column -->
      <div class="hero-entrance hero-entrance-delay-2 relative flex justify-center lg:justify-end">
        <!-- Phone mockup -->
        <div class="relative w-64 sm:w-72">
          <!-- Ambient glow behind phone -->
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 h-[500px] rounded-full bg-primary/10 blur-[80px] dark:bg-primary/[0.07] pointer-events-none" aria-hidden="true"></div>
          <!-- Phone frame -->
          <div class="rounded-[2.5rem] border-[3px] border-foreground/10 dark:border-white/10 bg-white/60 dark:bg-slate-800/60 backdrop-blur-xl p-3 shadow-xl shadow-primary/5">
            <!-- Notch -->
            <div class="absolute top-3 left-1/2 -translate-x-1/2 w-24 h-6 bg-foreground/10 dark:bg-white/10 rounded-full z-10"></div>

            <!-- Screen -->
            <div class="rounded-[2rem] bg-white dark:bg-slate-900 overflow-hidden">
              <!-- App toolbar -->
              <div class="bg-foreground/[0.03] dark:bg-white/[0.03] border-b border-foreground/5 dark:border-white/5 pt-8 pb-2 px-4">
                <!-- Status bar spacer -->
                <div class="flex items-center justify-between mb-3">
                  <div class="flex items-center gap-1.5">
                    <div class="w-2 h-2 rounded-full bg-success animate-pulse"></div>
                    <span class="text-[10px] font-heading font-medium text-foreground/50 dark:text-white/50">Deploy succeeded</span>
                  </div>
                  <span class="text-[10px] text-foreground/30 dark:text-white/30">feature/new-landing</span>
                </div>

                <!-- Viewport size selector -->
                <div class="flex items-center gap-2 justify-center">
                  <button class="viewport-preset text-[9px] font-heading font-medium px-2.5 py-1 rounded-md bg-foreground/5 dark:bg-white/5 text-foreground/40 dark:text-white/40" data-width="393" aria-label="Switch to phone view (393px)">
                    <svg class="w-3 h-3 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                    </svg>
                  </button>
                  <button class="viewport-preset text-[9px] font-heading font-medium px-2.5 py-1 rounded-md bg-foreground/5 dark:bg-white/5 text-foreground/40 dark:text-white/40" data-width="1032" aria-label="Switch to tablet view (1032px)">
                    <svg class="w-3 h-3 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5h3m-6.75 2.25h10.5a2.25 2.25 0 002.25-2.25v-15a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 4.5v15a2.25 2.25 0 002.25 2.25z" />
                    </svg>
                  </button>
                  <button class="viewport-preset viewport-preset-active text-[9px] font-heading font-medium px-2.5 py-1 rounded-md bg-primary/10 text-primary ring-1 ring-primary/30" data-width="2560" aria-label="Switch to desktop view (2560px)">
                    <svg class="w-3 h-3 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25z" />
                    </svg>
                  </button>
                </div>

                <!-- Resolution label -->
                <div class="text-center mt-2">
                  <span class="viewport-label text-[10px] font-mono text-foreground/30 dark:text-white/30">Desktop 2560 × 1440</span>
                </div>
              </div>

              <!-- Viewport content: simulated desktop website -->
              <div class="viewport-content relative h-72 sm:h-80 overflow-hidden" data-current-preset="2560">
                <div class="viewport-website origin-top-left transition-transform duration-500 ease-out" style="transform: scale(0.09); width: 2560px;">
                  <!-- Simulated nav -->
                  <div class="h-16 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 flex items-center px-12">
                    <div class="w-32 h-5 bg-slate-300 dark:bg-slate-600 rounded"></div>
                    <div class="flex-1"></div>
                    <div class="flex gap-8">
                      <div class="w-16 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                      <div class="w-16 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                      <div class="w-16 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                      <div class="w-20 h-8 bg-indigo-500 rounded-lg"></div>
                    </div>
                  </div>

                  <!-- Simulated hero -->
                  <div class="px-96 py-24 text-center">
                    <div class="w-96 h-8 bg-slate-300 dark:bg-slate-600 rounded mx-auto mb-6"></div>
                    <div class="w-[500px] h-5 bg-slate-200 dark:bg-slate-700 rounded mx-auto mb-4"></div>
                    <div class="w-80 h-5 bg-slate-200 dark:bg-slate-700 rounded mx-auto mb-10"></div>
                    <div class="flex justify-center gap-6">
                      <div class="w-40 h-12 bg-indigo-500 rounded-xl"></div>
                      <div class="w-40 h-12 border-2 border-indigo-300 rounded-xl"></div>
                    </div>
                  </div>

                  <!-- Simulated content grid -->
                  <div class="px-48 py-12 bg-slate-50 dark:bg-slate-800/50">
                    <div class="w-64 h-6 bg-slate-300 dark:bg-slate-600 rounded mx-auto mb-8"></div>
                    <div class="grid grid-cols-3 gap-8 max-w-[1800px] mx-auto">
                      <div class="h-56 bg-white dark:bg-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-8">
                        <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/30 rounded-xl mb-4"></div>
                        <div class="w-32 h-4 bg-slate-200 dark:bg-slate-600 rounded mb-3"></div>
                        <div class="w-full h-3 bg-slate-100 dark:bg-slate-600/50 rounded mb-2"></div>
                        <div class="w-3/4 h-3 bg-slate-100 dark:bg-slate-600/50 rounded"></div>
                      </div>
                      <div class="h-56 bg-white dark:bg-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-8">
                        <div class="w-12 h-12 bg-orange-100 dark:bg-orange-900/30 rounded-xl mb-4"></div>
                        <div class="w-28 h-4 bg-slate-200 dark:bg-slate-600 rounded mb-3"></div>
                        <div class="w-full h-3 bg-slate-100 dark:bg-slate-600/50 rounded mb-2"></div>
                        <div class="w-2/3 h-3 bg-slate-100 dark:bg-slate-600/50 rounded"></div>
                      </div>
                      <div class="h-56 bg-white dark:bg-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-8">
                        <div class="w-12 h-12 bg-emerald-100 dark:bg-emerald-900/30 rounded-xl mb-4"></div>
                        <div class="w-36 h-4 bg-slate-200 dark:bg-slate-600 rounded mb-3"></div>
                        <div class="w-full h-3 bg-slate-100 dark:bg-slate-600/50 rounded mb-2"></div>
                        <div class="w-5/6 h-3 bg-slate-100 dark:bg-slate-600/50 rounded"></div>
                      </div>
                    </div>
                  </div>

                  <!-- Extra footer area to fill space -->
                  <div class="px-48 py-12 bg-slate-100 dark:bg-slate-800">
                    <div class="flex justify-center gap-16">
                      <div class="w-20 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                      <div class="w-20 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                      <div class="w-20 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Home indicator -->
          <div class="absolute bottom-1.5 left-1/2 -translate-x-1/2 w-28 h-1 bg-foreground/15 dark:bg-white/15 rounded-full"></div>
        </div>

      </div>
    </div>
  </div>
</section>

<script>
  function initViewportDemo(): void {
    const presets = document.querySelectorAll<HTMLButtonElement>('.viewport-preset');
    const label = document.querySelector('.viewport-label');
    const website = document.querySelector<HTMLElement>('.viewport-website');
    const content = document.querySelector<HTMLElement>('.viewport-content');

    if (!presets.length || !label || !website || !content) return;

    const resolutions: Record<string, { label: string; scale: string; width: string }> = {
      '393': { label: 'iPhone 16 Pro 393 × 852', scale: 'scale(0.58)', width: '393px' },
      '1032': { label: 'iPad Pro 1032 × 1376', scale: 'scale(0.22)', width: '1032px' },
      '2560': { label: 'Desktop 2560 × 1440', scale: 'scale(0.09)', width: '2560px' },
    };

    presets.forEach((btn) => {
      btn.addEventListener('click', () => {
        const width = btn.dataset.width;
        if (!width || !resolutions[width]) return;

        // Update active state
        presets.forEach((p) => {
          p.classList.remove('viewport-preset-active', 'bg-primary/10', 'text-primary', 'ring-1', 'ring-primary/30');
          p.classList.add('bg-foreground/5', 'dark:bg-white/5', 'text-foreground/40', 'dark:text-white/40');
        });
        btn.classList.add('viewport-preset-active', 'bg-primary/10', 'text-primary', 'ring-1', 'ring-primary/30');
        btn.classList.remove('bg-foreground/5', 'dark:bg-white/5', 'text-foreground/40', 'dark:text-white/40');

        // Animate viewport change
        const res = resolutions[width];
        website.style.transform = res.scale;
        website.style.width = res.width;
        label.textContent = res.label;
        content.dataset.currentPreset = width;

        // Plausible tracking
        if (window.plausible) {
          window.plausible('Viewport Demo Switch', { props: { preset: res.label } });
        }
      });
    });
  }

  initViewportDemo();
  document.addEventListener('astro:after-swap', initViewportDemo);
</script>
