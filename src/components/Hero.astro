---
import Button from './Button.astro';
---

<section class="relative overflow-hidden pt-20 md:pt-28 pb-12 md:pb-16">
  <!-- Ambient glow orbs -->
  <div class="pointer-events-none absolute -top-40 -left-40 w-[500px] h-[500px] rounded-full bg-primary/20 blur-[120px] dark:bg-primary/10" aria-hidden="true"></div>
  <div class="pointer-events-none absolute -bottom-20 -right-32 w-[400px] h-[400px] rounded-full bg-secondary/15 blur-[100px] dark:bg-secondary/[0.08]" aria-hidden="true"></div>

  <!-- Floating decorative shapes -->
  <div class="pointer-events-none absolute top-20 right-[15%] w-4 h-4 rounded-full border-2 border-primary/20 float-slow hidden md:block" aria-hidden="true"></div>
  <div class="pointer-events-none absolute bottom-32 left-[10%] w-3 h-3 bg-secondary/20 rounded float-slow-reverse hidden md:block" aria-hidden="true"></div>
  <div class="pointer-events-none absolute top-1/2 right-[8%] w-2 h-2 bg-primary/15 rounded-full float-slow hidden lg:block" aria-hidden="true"></div>

  <div class="container-wide">
    <!-- Text content -->
    <div class="text-center max-w-3xl mx-auto mb-12 lg:mb-16">
      <!-- Badge -->
      <a href="#platforms" class="hero-entrance inline-flex items-center gap-2 bg-primary/10 text-primary dark:text-indigo-300 text-sm font-medium px-4 py-1.5 rounded-full mb-8 hover:bg-primary/15 transition-colors">
        <svg class="w-4 h-4 text-foreground/70 dark:text-white/70" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
        </svg>
        Join the beta — iOS, iPadOS &amp; macOS
      </a>

      <!-- Headline -->
      <h1 class="hero-entrance hero-entrance-delay-1 font-heading font-bold text-4xl md:text-5xl lg:text-6xl leading-tight tracking-tight mb-6">
        Instantly preview your website at
        <span class="gradient-text-primary">any resolution.</span>
        From any device. Even your phone.
      </h1>

      <!-- Subheading -->
      <p class="hero-entrance hero-entrance-delay-2 text-lg md:text-xl text-foreground/60 max-w-xl lg:max-w-2xl mx-auto mb-10 leading-relaxed">
        Push a change, check it instantly. Viewpo shows your website at any screen size — on whatever device you're holding — and pulls together deploy previews from Cloudflare Pages, GitHub Pages, Vercel, and Netlify the moment they go live.
      </p>

      <!-- CTAs -->
      <div class="hero-entrance hero-entrance-delay-3 flex flex-col sm:flex-row items-center justify-center gap-4">
        <button type="button" data-open-signup class="inline-flex items-center justify-center gap-2 font-heading font-medium rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 hover:scale-[1.02] active:scale-[0.98] px-8 py-4 text-lg bg-primary text-white hover:bg-primary-hover focus:ring-primary shadow-md hover:shadow-lg plausible-event-name=CTA+Join+Beta">
          Join the Beta
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </button>
        <Button href="#features" variant="outline" size="lg">
          See How It Works
        </Button>
      </div>
    </div>

    <!-- Extended Viewport Portal Diagram -->
    <div class="hero-entrance hero-entrance-delay-2 relative flex flex-col items-center">

      <!-- Ghost desktop outline (lg only, behind phone) -->
      <div class="hidden lg:block absolute top-8 left-1/2 -translate-x-1/2 w-[44rem] pointer-events-none" aria-hidden="true">
        <div class="aspect-[16/10] rounded-xl border-2 border-dashed border-foreground/[0.06] dark:border-white/[0.06]">
          <!-- Ghost desktop toolbar -->
          <div class="h-7 flex items-center px-4 gap-1.5 border-b border-foreground/[0.04] dark:border-white/[0.04]">
            <div class="w-2 h-2 rounded-full bg-foreground/[0.06] dark:bg-white/[0.06]"></div>
            <div class="w-2 h-2 rounded-full bg-foreground/[0.06] dark:bg-white/[0.06]"></div>
            <div class="w-2 h-2 rounded-full bg-foreground/[0.06] dark:bg-white/[0.06]"></div>
            <div class="flex-1 flex justify-center">
              <div class="text-[9px] font-mono text-foreground/[0.08] dark:text-white/[0.08]">your-project.pages.dev</div>
            </div>
          </div>
          <!-- Ghost content -->
          <div class="p-6">
            <div class="w-40 h-4 bg-foreground/[0.03] dark:bg-white/[0.03] rounded mb-4"></div>
            <div class="w-full h-3 bg-foreground/[0.02] dark:bg-white/[0.02] rounded mb-2"></div>
            <div class="w-3/4 h-3 bg-foreground/[0.02] dark:bg-white/[0.02] rounded mb-6"></div>
            <div class="grid grid-cols-3 gap-4">
              <div class="h-20 bg-foreground/[0.02] dark:bg-white/[0.02] rounded-lg"></div>
              <div class="h-20 bg-foreground/[0.02] dark:bg-white/[0.02] rounded-lg"></div>
              <div class="h-20 bg-foreground/[0.02] dark:bg-white/[0.02] rounded-lg"></div>
            </div>
          </div>
        </div>
        <!-- Ghost label -->
        <div class="text-center mt-2">
          <span class="text-[10px] font-mono text-foreground/[0.12] dark:text-white/[0.12]">Desktop viewport — 2560 × 1440</span>
        </div>
      </div>

      <!-- Phone mockup (main element) -->
      <div class="relative z-10 w-72 sm:w-80 lg:w-[22rem]">
        <!-- Ambient glow behind phone -->
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-96 h-[600px] rounded-full bg-primary/10 blur-[80px] dark:bg-primary/[0.07] pointer-events-none" aria-hidden="true"></div>

        <!-- Phone frame -->
        <div class="rounded-[2.5rem] border-[3px] border-foreground/10 dark:border-white/10 bg-white/60 dark:bg-slate-800/60 backdrop-blur-xl p-3 shadow-xl shadow-primary/5">
          <!-- Notch -->
          <div class="absolute top-3 left-1/2 -translate-x-1/2 w-24 h-6 bg-foreground/10 dark:bg-white/10 rounded-full z-10"></div>

          <!-- Screen -->
          <div class="rounded-[2rem] bg-white dark:bg-slate-900 overflow-hidden">
            <!-- App toolbar -->
            <div class="bg-foreground/[0.03] dark:bg-white/[0.03] border-b border-foreground/5 dark:border-white/5 pt-8 pb-3 px-4">
              <!-- Deploy status -->
              <div class="flex items-center justify-between mb-3">
                <div class="flex items-center gap-1.5">
                  <div class="w-2 h-2 rounded-full bg-success animate-pulse"></div>
                  <span class="text-[10px] font-heading font-medium text-foreground/50 dark:text-white/50">Deploy succeeded</span>
                </div>
                <span class="text-[10px] text-foreground/30 dark:text-white/30 font-mono">feature/new-landing</span>
              </div>

              <!-- Device preset pills (non-interactive, decorative) -->
              <div class="flex items-center gap-1.5 justify-center" aria-hidden="true">
                <div class="text-[8px] font-heading font-medium px-2 py-1 rounded-md bg-foreground/5 dark:bg-white/5 text-foreground/30 dark:text-white/30">
                  <svg class="w-2.5 h-2.5 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3" />
                  </svg>
                </div>
                <div class="text-[8px] font-heading font-medium px-2 py-1 rounded-md bg-foreground/5 dark:bg-white/5 text-foreground/30 dark:text-white/30">
                  <svg class="w-2.5 h-2.5 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 19.5h3m-6.75 2.25h10.5a2.25 2.25 0 002.25-2.25v-15a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 4.5v15a2.25 2.25 0 002.25 2.25z" />
                  </svg>
                </div>
                <div class="text-[8px] font-heading font-medium px-2 py-1 rounded-md bg-primary/10 text-primary ring-1 ring-primary/30">
                  <svg class="w-2.5 h-2.5 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25z" />
                  </svg>
                </div>
                <div class="text-[8px] font-heading font-medium px-2 py-1 rounded-md bg-foreground/5 dark:bg-white/5 text-foreground/30 dark:text-white/30">
                  <svg class="w-2.5 h-2.5 mx-auto mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10.5 6h9.75M10.5 6a1.5 1.5 0 11-3 0m3 0a1.5 1.5 0 10-3 0M3.75 6H7.5m3 12h9.75m-9.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-3.75 0H7.5m9-6h3.75m-3.75 0a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m-9.75 0h9.75" />
                  </svg>
                </div>
              </div>

              <!-- Resolution label -->
              <div class="text-center mt-2">
                <span class="text-[10px] font-mono text-foreground/30 dark:text-white/30">Desktop 2560 × 1440</span>
              </div>
            </div>

            <!-- Viewport preview: wireframe of a desktop website -->
            <div class="relative overflow-hidden">
              <!-- The "viewport card" showing desktop content scaled into phone -->
              <div class="origin-top-left" style="transform: scale(0.28); width: 1024px; height: 1400px;">
                <!-- Simulated nav -->
                <div class="h-16 bg-slate-100 dark:bg-slate-800 border-b border-slate-200 dark:border-slate-700 flex items-center px-8">
                  <div class="w-28 h-5 bg-slate-300 dark:bg-slate-600 rounded"></div>
                  <div class="flex-1"></div>
                  <div class="flex gap-6">
                    <div class="w-14 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    <div class="w-14 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    <div class="w-14 h-3 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    <div class="w-20 h-8 bg-indigo-500 rounded-lg"></div>
                  </div>
                </div>

                <!-- Simulated hero section -->
                <div class="px-24 py-16 text-center">
                  <div class="w-72 h-7 bg-slate-300 dark:bg-slate-600 rounded mx-auto mb-4"></div>
                  <div class="w-96 h-4 bg-slate-200 dark:bg-slate-700 rounded mx-auto mb-3"></div>
                  <div class="w-64 h-4 bg-slate-200 dark:bg-slate-700 rounded mx-auto mb-8"></div>
                  <div class="flex justify-center gap-4">
                    <div class="w-32 h-10 bg-indigo-500 rounded-xl"></div>
                    <div class="w-32 h-10 border-2 border-indigo-300 rounded-xl"></div>
                  </div>
                </div>

                <!-- Simulated content grid -->
                <div class="px-16 py-10 bg-slate-50 dark:bg-slate-800/50">
                  <div class="w-48 h-5 bg-slate-300 dark:bg-slate-600 rounded mx-auto mb-6"></div>
                  <div class="grid grid-cols-3 gap-5 max-w-[900px] mx-auto">
                    <div class="h-48 bg-white dark:bg-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-6">
                      <div class="w-10 h-10 bg-indigo-100 dark:bg-indigo-900/30 rounded-xl mb-3"></div>
                      <div class="w-24 h-3 bg-slate-200 dark:bg-slate-600 rounded mb-2"></div>
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-600/50 rounded mb-1.5"></div>
                      <div class="w-3/4 h-2 bg-slate-100 dark:bg-slate-600/50 rounded"></div>
                    </div>
                    <div class="h-48 bg-white dark:bg-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-6">
                      <div class="w-10 h-10 bg-orange-100 dark:bg-orange-900/30 rounded-xl mb-3"></div>
                      <div class="w-20 h-3 bg-slate-200 dark:bg-slate-600 rounded mb-2"></div>
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-600/50 rounded mb-1.5"></div>
                      <div class="w-2/3 h-2 bg-slate-100 dark:bg-slate-600/50 rounded"></div>
                    </div>
                    <div class="h-48 bg-white dark:bg-slate-700 rounded-2xl border border-slate-200 dark:border-slate-600 p-6">
                      <div class="w-10 h-10 bg-emerald-100 dark:bg-emerald-900/30 rounded-xl mb-3"></div>
                      <div class="w-28 h-3 bg-slate-200 dark:bg-slate-600 rounded mb-2"></div>
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-600/50 rounded mb-1.5"></div>
                      <div class="w-5/6 h-2 bg-slate-100 dark:bg-slate-600/50 rounded"></div>
                    </div>
                  </div>
                </div>

                <!-- Simulated testimonials/content section -->
                <div class="px-16 py-10">
                  <div class="w-56 h-5 bg-slate-300 dark:bg-slate-600 rounded mx-auto mb-6"></div>
                  <div class="grid grid-cols-2 gap-5 max-w-[700px] mx-auto">
                    <div class="h-32 bg-slate-50 dark:bg-slate-800/50 rounded-xl border border-slate-200 dark:border-slate-600 p-5">
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-700 rounded mb-1.5"></div>
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-700 rounded mb-1.5"></div>
                      <div class="w-2/3 h-2 bg-slate-100 dark:bg-slate-700 rounded mb-4"></div>
                      <div class="flex items-center gap-2">
                        <div class="w-6 h-6 bg-slate-200 dark:bg-slate-600 rounded-full"></div>
                        <div class="w-16 h-2 bg-slate-200 dark:bg-slate-600 rounded"></div>
                      </div>
                    </div>
                    <div class="h-32 bg-slate-50 dark:bg-slate-800/50 rounded-xl border border-slate-200 dark:border-slate-600 p-5">
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-700 rounded mb-1.5"></div>
                      <div class="w-full h-2 bg-slate-100 dark:bg-slate-700 rounded mb-1.5"></div>
                      <div class="w-1/2 h-2 bg-slate-100 dark:bg-slate-700 rounded mb-4"></div>
                      <div class="flex items-center gap-2">
                        <div class="w-6 h-6 bg-slate-200 dark:bg-slate-600 rounded-full"></div>
                        <div class="w-20 h-2 bg-slate-200 dark:bg-slate-600 rounded"></div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Simulated footer -->
                <div class="px-16 py-8 bg-slate-100 dark:bg-slate-800">
                  <div class="flex justify-center gap-12">
                    <div class="w-16 h-2 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    <div class="w-16 h-2 bg-slate-200 dark:bg-slate-700 rounded"></div>
                    <div class="w-16 h-2 bg-slate-200 dark:bg-slate-700 rounded"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Home indicator -->
        <div class="absolute bottom-1.5 left-1/2 -translate-x-1/2 w-28 h-1 bg-foreground/15 dark:bg-white/15 rounded-full"></div>
      </div>

      <!-- Annotation: what you're seeing -->
      <div class="mt-4 flex items-center justify-center gap-2" aria-hidden="true">
        <div class="h-px w-8 bg-primary/20"></div>
        <span class="text-[11px] font-heading font-medium text-foreground/40 dark:text-white/40">
          A 2560 × 1440 desktop viewport, rendered on an iPhone
        </span>
        <div class="h-px w-8 bg-primary/20"></div>
      </div>

      <!-- Stacked viewport hints (suggests more viewports available) -->
      <div class="relative w-64 sm:w-72 lg:w-80 h-4 mx-auto mt-2" aria-hidden="true">
        <div class="absolute inset-x-4 top-0 h-full rounded-b-2xl border-x-2 border-b-2 border-foreground/[0.05] dark:border-white/[0.05] bg-foreground/[0.01] dark:bg-white/[0.01]"></div>
        <div class="absolute inset-x-8 top-1 h-full rounded-b-2xl border-x-2 border-b-2 border-foreground/[0.03] dark:border-white/[0.03]"></div>
      </div>

      <!-- Stats bar (integrated from SocialProof) -->
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-12">
        <div class="reveal flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m9.86-9.86a4.5 4.5 0 00-6.364 0l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
            </svg>
          </div>
          <div>
            <div class="font-heading font-bold text-lg text-foreground">4</div>
            <div class="text-xs text-foreground/50">Hosting providers</div>
          </div>
        </div>

        <div class="hidden sm:block w-px h-8 bg-foreground/10" aria-hidden="true"></div>

        <div class="reveal reveal-delay-1 flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-secondary/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-secondary" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
            </svg>
          </div>
          <div>
            <div class="font-heading font-bold text-lg text-foreground">3</div>
            <div class="text-xs text-foreground/50">Apple platforms</div>
          </div>
        </div>

        <div class="hidden sm:block w-px h-8 bg-foreground/10" aria-hidden="true"></div>

        <div class="reveal reveal-delay-2 flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-success/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25z" />
            </svg>
          </div>
          <div>
            <div class="font-heading font-bold text-lg text-primary">Any</div>
            <div class="text-xs text-foreground/50">Screen size</div>
          </div>
        </div>
      </div>

      <!-- "Works on" device silhouettes -->
      <div class="mt-6 flex items-center justify-center gap-3" aria-hidden="true">
        <span class="text-[10px] font-heading text-foreground/25 dark:text-white/25 uppercase tracking-wider">Works on</span>
        <div class="flex items-end gap-2 opacity-20 dark:opacity-15">
          <!-- iPhone silhouette -->
          <div class="w-4 h-7 rounded-[3px] border border-foreground dark:border-white"></div>
          <!-- iPad silhouette -->
          <div class="w-6 h-8 rounded-[3px] border border-foreground dark:border-white"></div>
          <!-- MacBook silhouette -->
          <div class="flex flex-col items-center">
            <div class="w-10 h-6 rounded-t-[3px] border border-foreground dark:border-white border-b-0"></div>
            <div class="w-12 h-0.5 bg-foreground dark:bg-white rounded-b-sm"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
