---
import Button from './Button.astro';
---

<section class="relative overflow-hidden pt-20 md:pt-28 pb-12 md:pb-16">
  <!-- Ambient glow orbs -->
  <div class="pointer-events-none absolute -top-40 -left-40 w-[500px] h-[500px] rounded-full bg-primary/20 blur-[120px] dark:bg-primary/10" aria-hidden="true"></div>
  <div class="pointer-events-none absolute -bottom-20 -right-32 w-[400px] h-[400px] rounded-full bg-secondary/15 blur-[100px] dark:bg-secondary/[0.08]" aria-hidden="true"></div>

  <!-- Floating decorative shapes -->
  <div class="pointer-events-none absolute top-20 right-[15%] w-4 h-4 rounded-full border-2 border-primary/20 float-slow hidden md:block" aria-hidden="true"></div>
  <div class="pointer-events-none absolute bottom-32 left-[10%] w-3 h-3 bg-secondary/20 rounded float-slow-reverse hidden md:block" aria-hidden="true"></div>
  <div class="pointer-events-none absolute top-1/2 right-[8%] w-2 h-2 bg-primary/15 rounded-full float-slow hidden lg:block" aria-hidden="true"></div>

  <div class="container-wide">
    <!-- Text content -->
    <div class="text-center max-w-3xl mx-auto mb-12 lg:mb-16">
      <!-- Badge -->
      <a href="#platforms" class="hero-entrance inline-flex items-center gap-2 bg-primary/10 text-primary dark:text-indigo-300 text-sm font-medium px-4 py-1.5 rounded-full mb-8 hover:bg-primary/15 transition-colors">
        <svg class="w-4 h-4 text-foreground/70 dark:text-white/70" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
        </svg>
        Join the beta — iOS, iPadOS &amp; macOS
      </a>

      <!-- Headline -->
      <h1 class="hero-entrance hero-entrance-delay-1 font-heading font-bold text-4xl md:text-5xl lg:text-6xl leading-tight tracking-tight mb-6">
        Instantly preview your website at
        <span class="gradient-text-primary">any resolution.</span>
        From any device. Even your phone.
      </h1>

      <!-- Subheading -->
      <p class="hero-entrance hero-entrance-delay-2 text-lg md:text-xl text-foreground/60 max-w-xl lg:max-w-2xl mx-auto mb-10 leading-relaxed">
        Push a change, check it instantly. Viewpo shows your website at any screen size — on whatever device you're holding — and pulls together deploy previews from Cloudflare Pages, GitHub Pages, Vercel, and Netlify the moment they go live.
      </p>

      <!-- CTAs -->
      <div class="hero-entrance hero-entrance-delay-3 flex flex-col sm:flex-row items-center justify-center gap-4">
        <button type="button" data-open-signup class="inline-flex items-center justify-center gap-2 font-heading font-medium rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 hover:scale-[1.02] active:scale-[0.98] px-8 py-4 text-lg bg-primary text-white hover:bg-primary-hover focus:ring-primary shadow-md hover:shadow-lg plausible-event-name=CTA+Join+Beta">
          Join the Beta
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </button>
        <Button href="#features" variant="outline" size="lg">
          See How It Works
        </Button>
      </div>
    </div>

    <!-- Resolution Lens Diagram: 3 device cards fanning out -->
    <div class="hero-entrance hero-entrance-delay-2 relative flex flex-col items-center">

      <!-- Ambient glow behind card cluster -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[400px] rounded-full bg-primary/10 blur-[100px] dark:bg-primary/[0.06] pointer-events-none" aria-hidden="true"></div>

      <!-- Card stack container: all straight, smaller screens cascade right -->
      <div class="card-stack relative w-full max-w-3xl mx-auto h-[360px] sm:h-[400px] lg:h-[440px]">

        <!-- === 27" Monitor (very back, largest, standalone) === -->
        <div class="reveal absolute left-1/2 top-0 -translate-x-[58%] sm:-translate-x-[55%] lg:-translate-x-[52%] w-[300px] sm:w-[360px] lg:w-[420px] z-0 opacity-80">
          <div class="rounded-xl border border-foreground/[0.08] dark:border-white/[0.08] bg-white dark:bg-slate-800 shadow overflow-hidden">
            <!-- Monitor bezel / browser chrome -->
            <div class="h-6 flex items-center px-3 gap-1.5 bg-slate-50 dark:bg-slate-700 border-b border-slate-200/60 dark:border-slate-600/60">
              <div class="w-1.5 h-1.5 rounded-full bg-red-400/40"></div>
              <div class="w-1.5 h-1.5 rounded-full bg-amber-400/40"></div>
              <div class="w-1.5 h-1.5 rounded-full bg-emerald-400/40"></div>
              <div class="flex-1 flex justify-center">
                <div class="text-[7px] font-mono text-foreground/20 dark:text-white/20 bg-foreground/[0.03] dark:bg-white/[0.03] px-2 py-0.5 rounded">your-project.pages.dev</div>
              </div>
            </div>
            <!-- 27" wireframe content -->
            <div class="p-3 sm:p-4">
              <div class="flex items-center mb-3">
                <div class="w-12 h-2.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                <div class="flex-1"></div>
                <div class="flex gap-2">
                  <div class="w-6 h-1.5 bg-slate-200/80 dark:bg-slate-600/80 rounded"></div>
                  <div class="w-6 h-1.5 bg-slate-200/80 dark:bg-slate-600/80 rounded"></div>
                  <div class="w-8 h-3 bg-indigo-300/60 rounded"></div>
                </div>
              </div>
              <div class="text-center mb-3">
                <div class="w-44 h-3 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-1.5"></div>
                <div class="w-56 h-1.5 bg-slate-200/70 dark:bg-slate-600/70 rounded mx-auto mb-1"></div>
                <div class="w-36 h-1.5 bg-slate-200/70 dark:bg-slate-600/70 rounded mx-auto mb-3"></div>
                <div class="flex justify-center gap-2">
                  <div class="w-14 h-4 bg-indigo-300/60 rounded"></div>
                  <div class="w-14 h-4 border border-indigo-200/60 rounded"></div>
                </div>
              </div>
              <div class="grid grid-cols-4 gap-1.5">
                <div class="h-12 bg-slate-100/80 dark:bg-slate-700/50 rounded border border-slate-200/50 dark:border-slate-600/50"></div>
                <div class="h-12 bg-slate-100/80 dark:bg-slate-700/50 rounded border border-slate-200/50 dark:border-slate-600/50"></div>
                <div class="h-12 bg-slate-100/80 dark:bg-slate-700/50 rounded border border-slate-200/50 dark:border-slate-600/50"></div>
                <div class="h-12 bg-slate-100/80 dark:bg-slate-700/50 rounded border border-slate-200/50 dark:border-slate-600/50"></div>
              </div>
            </div>
          </div>
          <!-- Monitor stand -->
          <div class="flex flex-col items-center" aria-hidden="true">
            <div class="w-8 h-4 bg-slate-200 dark:bg-slate-600 rounded-b-sm"></div>
            <div class="w-16 h-1 bg-slate-200 dark:bg-slate-600 rounded-full"></div>
          </div>
          <!-- Resolution badge -->
          <div class="absolute -top-2.5 -right-2.5 px-2.5 py-1 rounded-full bg-foreground/[0.04] dark:bg-white/[0.06] text-[9px] font-heading font-semibold text-foreground/35 dark:text-white/35 shadow-sm border border-foreground/[0.04] dark:border-white/[0.04]">
            27" — 2560 × 1440
          </div>
        </div>

        <!-- === Laptop card (second from back, straight) === -->
        <div class="reveal reveal-delay-1 absolute left-1/2 top-6 sm:top-8 -translate-x-[42%] sm:-translate-x-[38%] lg:-translate-x-[35%] w-60 sm:w-68 lg:w-76 z-10 opacity-90">
          <div class="rounded-xl border border-foreground/10 dark:border-white/10 bg-white dark:bg-slate-800 shadow-md overflow-hidden">
            <!-- Browser chrome -->
            <div class="h-6 flex items-center px-3 gap-1.5 bg-slate-50 dark:bg-slate-700 border-b border-slate-200 dark:border-slate-600">
              <div class="w-2 h-2 rounded-full bg-red-400/60"></div>
              <div class="w-2 h-2 rounded-full bg-amber-400/60"></div>
              <div class="w-2 h-2 rounded-full bg-emerald-400/60"></div>
              <div class="flex-1 flex justify-center">
                <div class="text-[7px] font-mono text-foreground/30 dark:text-white/30 bg-foreground/5 dark:bg-white/5 px-2.5 py-0.5 rounded">your-project.pages.dev</div>
              </div>
            </div>
            <!-- Laptop wireframe content -->
            <div class="p-3">
              <div class="flex items-center mb-3">
                <div class="w-12 h-2.5 bg-slate-300 dark:bg-slate-500 rounded"></div>
                <div class="flex-1"></div>
                <div class="flex gap-2">
                  <div class="w-7 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                  <div class="w-7 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                  <div class="w-9 h-3.5 bg-indigo-400 rounded"></div>
                </div>
              </div>
              <div class="text-center mb-3">
                <div class="w-36 h-3.5 bg-slate-300 dark:bg-slate-500 rounded mx-auto mb-1.5"></div>
                <div class="w-48 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-1"></div>
                <div class="w-32 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-3"></div>
                <div class="flex justify-center gap-2">
                  <div class="w-14 h-4 bg-indigo-400 rounded"></div>
                  <div class="w-14 h-4 border border-indigo-300 rounded"></div>
                </div>
              </div>
              <div class="grid grid-cols-3 gap-1.5">
                <div class="h-14 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-2">
                  <div class="w-4 h-4 bg-indigo-200 dark:bg-indigo-800/40 rounded mb-1"></div>
                  <div class="w-10 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                </div>
                <div class="h-14 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-2">
                  <div class="w-4 h-4 bg-orange-200 dark:bg-orange-800/40 rounded mb-1"></div>
                  <div class="w-8 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                </div>
                <div class="h-14 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-2">
                  <div class="w-4 h-4 bg-emerald-200 dark:bg-emerald-800/40 rounded mb-1"></div>
                  <div class="w-12 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                </div>
              </div>
            </div>
          </div>
          <!-- Resolution badge -->
          <div class="absolute -top-2.5 -right-2.5 px-2.5 py-1 rounded-full bg-foreground/5 dark:bg-white/10 text-[10px] font-heading font-semibold text-foreground/50 dark:text-white/50 shadow-sm border border-foreground/5 dark:border-white/5">
            MacBook Pro
          </div>
        </div>

        <!-- === Tablet card (middle, straight, shifted right) === -->
        <div class="reveal reveal-delay-2 absolute left-1/2 top-12 sm:top-16 -translate-x-[25%] sm:-translate-x-[20%] lg:-translate-x-[15%] w-44 sm:w-52 lg:w-56 z-20">
          <div class="rounded-xl border border-foreground/10 dark:border-white/10 bg-white dark:bg-slate-800 shadow-lg overflow-hidden">
            <!-- Tablet status bar -->
            <div class="h-5 flex items-center justify-center bg-slate-50 dark:bg-slate-700 border-b border-slate-200 dark:border-slate-600">
              <div class="w-10 h-1 bg-foreground/10 dark:bg-white/10 rounded-full"></div>
            </div>
            <!-- Tablet wireframe content -->
            <div class="p-3">
              <div class="flex items-center mb-3">
                <div class="w-10 h-2.5 bg-slate-300 dark:bg-slate-500 rounded"></div>
                <div class="flex-1"></div>
                <div class="flex gap-2">
                  <div class="w-6 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                  <div class="w-8 h-3.5 bg-indigo-400 rounded"></div>
                </div>
              </div>
              <div class="text-center mb-3">
                <div class="w-28 h-3 bg-slate-300 dark:bg-slate-500 rounded mx-auto mb-1.5"></div>
                <div class="w-36 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-1"></div>
                <div class="w-24 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-2.5"></div>
                <div class="flex justify-center gap-1.5">
                  <div class="w-12 h-4 bg-indigo-400 rounded"></div>
                  <div class="w-12 h-4 border border-indigo-300 rounded"></div>
                </div>
              </div>
              <div class="grid grid-cols-2 gap-2">
                <div class="h-14 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-2">
                  <div class="w-3 h-3 bg-indigo-200 dark:bg-indigo-800/40 rounded mb-1"></div>
                  <div class="w-10 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                </div>
                <div class="h-14 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-2">
                  <div class="w-3 h-3 bg-orange-200 dark:bg-orange-800/40 rounded mb-1"></div>
                  <div class="w-8 h-1.5 bg-slate-200 dark:bg-slate-600 rounded"></div>
                </div>
              </div>
            </div>
          </div>
          <!-- Resolution badge -->
          <div class="absolute -top-2.5 -right-2.5 px-2.5 py-1 rounded-full bg-primary/10 text-[10px] font-heading font-semibold text-primary shadow-sm border border-primary/20">
            iPad Pro
          </div>
        </div>

        <!-- === Phone card (front, smallest, straight, furthest right) === -->
        <div class="reveal reveal-delay-3 absolute left-1/2 top-16 sm:top-20 -translate-x-[8%] sm:-translate-x-[2%] lg:translate-x-[5%] w-32 sm:w-36 lg:w-40 z-30">
          <div class="rounded-2xl border-2 border-primary/30 dark:border-primary/20 bg-white dark:bg-slate-800 shadow-xl shadow-primary/10 overflow-hidden">
            <!-- Phone notch -->
            <div class="h-5 flex items-center justify-center bg-slate-50 dark:bg-slate-700 border-b border-slate-200 dark:border-slate-600">
              <div class="w-12 h-2.5 bg-foreground/10 dark:bg-white/10 rounded-full"></div>
            </div>
            <!-- Phone wireframe content -->
            <div class="p-2.5">
              <div class="flex items-center mb-2.5">
                <div class="w-8 h-2 bg-slate-300 dark:bg-slate-500 rounded"></div>
                <div class="flex-1"></div>
                <div class="w-4 h-4 bg-slate-200 dark:bg-slate-600 rounded"></div>
              </div>
              <div class="text-center mb-2.5">
                <div class="w-20 h-2.5 bg-slate-300 dark:bg-slate-500 rounded mx-auto mb-1.5"></div>
                <div class="w-full h-1.5 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-1"></div>
                <div class="w-3/4 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mx-auto mb-2"></div>
                <div class="w-16 h-4 bg-indigo-400 rounded mx-auto"></div>
              </div>
              <div class="space-y-1.5">
                <div class="h-10 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-1.5 flex items-start gap-1.5">
                  <div class="w-3 h-3 bg-indigo-200 dark:bg-indigo-800/40 rounded shrink-0"></div>
                  <div class="flex-1">
                    <div class="w-12 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mb-1"></div>
                    <div class="w-full h-1 bg-slate-200/70 dark:bg-slate-600/70 rounded"></div>
                  </div>
                </div>
                <div class="h-10 bg-slate-100 dark:bg-slate-700 rounded-lg border border-slate-200 dark:border-slate-600 p-1.5 flex items-start gap-1.5">
                  <div class="w-3 h-3 bg-orange-200 dark:bg-orange-800/40 rounded shrink-0"></div>
                  <div class="flex-1">
                    <div class="w-10 h-1.5 bg-slate-200 dark:bg-slate-600 rounded mb-1"></div>
                    <div class="w-full h-1 bg-slate-200/70 dark:bg-slate-600/70 rounded"></div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Home indicator -->
            <div class="flex justify-center py-1.5">
              <div class="w-10 h-1 bg-foreground/10 dark:bg-white/10 rounded-full"></div>
            </div>
          </div>
          <!-- Resolution badge -->
          <div class="absolute -top-2.5 -right-2.5 px-2.5 py-1 rounded-full bg-primary text-[10px] font-heading font-semibold text-white shadow-md">
            iPhone 16
          </div>
        </div>
      </div>

      <!-- Caption below cards -->
      <div class="mt-4 flex items-center justify-center gap-2" aria-hidden="true">
        <div class="h-px w-8 bg-primary/20"></div>
        <span class="text-[11px] font-heading font-medium text-foreground/40 dark:text-white/40">
          One site. Every screen size. Previewed instantly.
        </span>
        <div class="h-px w-8 bg-primary/20"></div>
      </div>

      <!-- Stats bar (integrated from SocialProof) -->
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-6 sm:gap-12">
        <div class="reveal flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-primary/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m9.86-9.86a4.5 4.5 0 00-6.364 0l-4.5 4.5a4.5 4.5 0 001.242 7.244" />
            </svg>
          </div>
          <div>
            <div class="font-heading font-bold text-lg text-foreground">4</div>
            <div class="text-xs text-foreground/50">Hosting providers</div>
          </div>
        </div>

        <div class="hidden sm:block w-px h-8 bg-foreground/10" aria-hidden="true"></div>

        <div class="reveal reveal-delay-1 flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-secondary/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-secondary" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.8-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z" />
            </svg>
          </div>
          <div>
            <div class="font-heading font-bold text-lg text-foreground">3</div>
            <div class="text-xs text-foreground/50">Apple platforms</div>
          </div>
        </div>

        <div class="hidden sm:block w-px h-8 bg-foreground/10" aria-hidden="true"></div>

        <div class="reveal reveal-delay-2 flex items-center gap-3">
          <div class="w-8 h-8 rounded-lg bg-success/10 flex items-center justify-center">
            <svg class="w-4 h-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 17.25v1.007a3 3 0 01-.879 2.122L7.5 21h9l-.621-.621A3 3 0 0115 18.257V17.25m6-12V15a2.25 2.25 0 01-2.25 2.25H5.25A2.25 2.25 0 013 15V5.25A2.25 2.25 0 015.25 3h13.5A2.25 2.25 0 0121 5.25z" />
            </svg>
          </div>
          <div>
            <div class="font-heading font-bold text-lg text-primary">Any</div>
            <div class="text-xs text-foreground/50">Screen size</div>
          </div>
        </div>
      </div>

      <!-- "Works on" device silhouettes -->
      <div class="mt-6 flex items-center justify-center gap-3" aria-hidden="true">
        <span class="text-[10px] font-heading text-foreground/25 dark:text-white/25 uppercase tracking-wider">Works on</span>
        <div class="flex items-end gap-2 opacity-20 dark:opacity-15">
          <!-- iPhone silhouette -->
          <div class="w-4 h-7 rounded-[3px] border border-foreground dark:border-white"></div>
          <!-- iPad silhouette -->
          <div class="w-6 h-8 rounded-[3px] border border-foreground dark:border-white"></div>
          <!-- MacBook silhouette -->
          <div class="flex flex-col items-center">
            <div class="w-10 h-6 rounded-t-[3px] border border-foreground dark:border-white border-b-0"></div>
            <div class="w-12 h-0.5 bg-foreground dark:bg-white rounded-b-sm"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
