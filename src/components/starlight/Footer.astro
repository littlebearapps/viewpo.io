---
/**
 * Custom Starlight Footer override.
 * Renders Starlight's pagination links followed by the Viewpo site Footer.
 */
import Pagination from '@astrojs/starlight/components/Pagination.astro';
import ViewpoFooter from '../Footer.astro';
---

<footer class="sl-flex">
  <Pagination />
</footer>

<!-- Viewpo site footer (outside Starlight's content area) -->
<ViewpoFooter />

<style>
  @layer starlight.core {
    footer {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>
