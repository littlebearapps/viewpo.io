---
import Section from './Section.astro';
import { FAQ_ITEMS } from '@utils/constants';
---

<Section id="faq" background="muted">
  <div class="text-center mb-16">
    <h2 class="font-heading font-bold text-3xl md:text-4xl mb-4 reveal">Frequently Asked Questions</h2>
    <p class="text-foreground/60 text-lg max-w-2xl mx-auto reveal reveal-delay-1">
      Everything you need to know about Viewpo.
    </p>
  </div>

  <div class="max-w-3xl mx-auto space-y-3">
    {FAQ_ITEMS.map((item, i) => (
      <details class={`accordion-item reveal reveal-delay-${Math.min(i + 1, 4)} group rounded-xl border border-foreground/10 dark:border-white/10 bg-white dark:bg-slate-800/50 overflow-hidden`} data-question={item.question}>
        <summary class="flex items-center justify-between gap-4 p-5 cursor-pointer select-none list-none font-heading font-semibold text-base hover:bg-foreground/[0.02] dark:hover:bg-white/[0.02] transition-colors">
          {item.question}
          <svg class="w-5 h-5 text-foreground/40 flex-shrink-0 transition-transform duration-200 group-open:rotate-45" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
          </svg>
        </summary>
        <div class="accordion-content px-5 pb-5 text-foreground/60 leading-relaxed">
          {item.answer}
        </div>
      </details>
    ))}
  </div>
</Section>

<!-- FAQPage JSON-LD -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": FAQ_ITEMS.map((item) => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer,
    },
  })),
})} />

<script>
  function initFaqTracking(): void {
    document.querySelectorAll<HTMLDetailsElement>('#faq details[data-question]').forEach((details) => {
      details.addEventListener('toggle', () => {
        if (details.open && window.plausible) {
          window.plausible('FAQ Toggle', { props: { question: details.dataset.question } });
        }
      });
    });
  }

  initFaqTracking();
  document.addEventListener('astro:after-swap', initFaqTracking);
</script>
