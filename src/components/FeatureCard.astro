const a = accentStyles[accent];
---

<div class={`card-lift rounded-xl p-px bg-gradient-to-br ${a.border}`}>
  <div class="bg-white dark:bg-slate-800/80 rounded-[11px] p-6 h-full">
    <div class={`w-12 h-12 rounded-lg ${a.bg} flex items-center justify-center mb-4 ${a.glow}`}>
      <svg class={`w-6 h-6 ${a.text}`} fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
        <Fragment set:html={icons[icon]} />
      </svg>
    </div>
    <h3 class="font-heading font-semibold text-lg mb-2">{title}</h3>
