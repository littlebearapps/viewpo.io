---
import BentoFeatureCard from './BentoFeatureCard.svelte';
import SectionHeader from './SectionHeader.astro';

const features = [
  {
    title: 'Viewport Viewer',
    subtitle: 'See Any Resolution, From Any Device',
    description: 'View a 27-inch desktop layout on your iPhone. Switch to tablet, laptop, or custom sizes. Real CSS viewport simulation — not a screenshot.',
    span: '2' as const,
    visual: 'viewport',
  },
  {
    title: 'Unified Dashboard',
    subtitle: 'All Deploys, One Screen',
    description: 'Cloudflare, GitHub, Vercel, and Netlify. Every deploy, build status, and branch in a single feed.',
    span: '1' as const,
    visual: 'dashboard',
  },
  {
    title: 'Push Notifications',
    subtitle: 'Know the Moment It\'s Ready',
    description: 'Pin branches you care about. Get notified when deploys succeed or fail. Stop refreshing dashboards.',
    span: '1' as const,
    visual: 'notifications',
  },
  {
    title: 'Share Links & QR Codes',
    subtitle: 'Share a Preview in Seconds',
    description: 'Generate a link or QR code for any deploy. Recipients see it at the right viewport — no account needed.',
    span: '1' as const,
    visual: 'qr',
  },
  {
    title: 'One-Tap Connection',
    subtitle: 'Connect Once, See Everything',
    description: 'Sign in with GitHub, Vercel, or Netlify. Paste a token for Cloudflare. Viewpo discovers your projects automatically.',
    span: '2' as const,
    visual: 'connection',
  },
  {
    title: 'Team Workspaces',
    subtitle: 'Review Together',
    description: 'Invite your team with Owner, Member, or Viewer roles. Everyone sees the same dashboard.',
    span: '1' as const,
    visual: 'team',
  },
];
---

<section id="features" class="py-20 md:py-28 lg:pt-64">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <SectionHeader
      title="Everything you need to review deploys"
      subtitle="Responsive previews, push notifications, one-tap account linking, and team collaboration — all in one app."
    />

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5" role="list">
      {features.map((feature, i) => (
        <div class={`reveal reveal-delay-${Math.min(i + 1, 4)} ${feature.span === '2' ? 'md:col-span-2' : ''}`}>
          <BentoFeatureCard
            client:visible
            title={feature.title}
            subtitle={feature.subtitle}
            description={feature.description}
            span={feature.span}
            visual={feature.visual}
          />
        </div>
      ))}
    </div>
  </div>
</section>
