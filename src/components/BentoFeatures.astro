---
import BentoFeatureCard from './BentoFeatureCard.svelte';
import SectionHeader from './SectionHeader.astro';

const features = [
  {
    title: 'Viewport Viewer',
    subtitle: 'See Any Resolution, From Any Device',
    description: 'View a 27-inch desktop layout on your iPhone. Switch to tablet, laptop, or custom sizes. Real CSS viewport simulation — not a screenshot.',
    span: '2' as const,
    visual: 'viewport',
  },
  {
    title: 'Unified Dashboard',
    subtitle: 'Every Provider, One Screen',
    description: 'Cloudflare, GitHub, Vercel, and Netlify in a single feed. Pin your active branches to the top and toggle watch to get notified — everything else stays quiet.',
    span: '1' as const,
    visual: 'pinwatch',
  },
  {
    title: 'Push Notifications',
    subtitle: 'Know the Moment It\u2019s Ready',
    description: 'Get notified when builds succeed or fail. Tap the notification to open the preview — no dashboards, no hunting for URLs.',
    span: '1' as const,
    visual: 'notifications',
  },
  {
    title: 'Share Links & QR Codes',
    subtitle: 'Share a Preview in Seconds',
    description: 'Generate a link or QR code for any update. Recipients see it at the right viewport — no account needed.',
    span: '1' as const,
    visual: 'qr',
  },
  {
    title: 'Team Workspaces',
    subtitle: 'Review and Collect Feedback',
    description: 'Invite your team with Owner, Member, or Viewer roles. Review together, leave comments, and get sign-off — all in one place.',
    span: '1' as const,
    visual: 'team',
  },
];
---

<section id="features" class="py-20 md:py-28 lg:pt-64">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Header -->
    <SectionHeader
      title="Everything you need to preview and ship"
      subtitle="See how your site looks at every screen size. Get notified when updates land. Share with your team."
    />

    <!-- Bento Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-5" role="list">
      {features.map((feature, i) => (
        <div class={`reveal reveal-delay-${Math.min(i + 1, 4)} ${feature.span === '2' ? 'md:col-span-2' : ''}`}>
          <BentoFeatureCard
            client:visible
            title={feature.title}
            subtitle={feature.subtitle}
            description={feature.description}
            span={feature.span}
            visual={feature.visual}
          />
        </div>
      ))}
    </div>
  </div>
</section>
