---
interface Props {
  id?: string;
  class?: string;
  background?: 'default' | 'muted' | 'dark';
  padding?: 'sm' | 'md' | 'lg';
}

const {
  id,
  class: className = '',
  background = 'default',
  padding = 'lg',
} = Astro.props;

const bgStyles = {
  default: '',
  muted: 'bg-muted dark:bg-neutral-800/50',
  dark: 'bg-dark-bg text-white',
};

const paddingStyles = {
  sm: 'py-12 md:py-16',
  md: 'py-16 md:py-20',
  lg: 'py-20 md:py-28',
};
---

<section id={id} class:list={[paddingStyles[padding], bgStyles[background], background === 'muted' ? 'relative' : '', className]}>
  {background === 'muted' && (
    <div class="pointer-events-none absolute inset-x-0 top-0 h-16 bg-gradient-to-b from-background to-transparent dark:from-dark-bg" aria-hidden="true"></div>
  )}
  <div class="container-wide">
    <slot />
  </div>
  {background === 'muted' && (
    <div class="pointer-events-none absolute inset-x-0 bottom-0 h-16 bg-gradient-to-t from-background to-transparent dark:from-dark-bg" aria-hidden="true"></div>
  )}
</section>
