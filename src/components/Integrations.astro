---

<Section id="integrations" padding="md">
  <div class="text-center mb-12 md:mb-16">
    <h2 class="font-heading font-bold text-3xl md:text-4xl mb-4 reveal">
      Zero Config Connection.
    </h2>
    <p class="text-foreground/60 dark:text-neutral-400 text-lg max-w-2xl mx-auto reveal reveal-delay-1">
      Link your provider once. We listen for webhooks automatically.
    </p>
  </div>

  <!-- Active integrations -->
  <div class="relative max-w-3xl mx-auto">
    <!-- Connector line (desktop only) -->
    <div class="hidden md:block absolute top-1/2 left-0 right-0 -translate-y-1/2 z-0" aria-hidden="true">
      <div class="h-px bg-gradient-to-r from-transparent via-neutral-300 dark:via-neutral-700 to-transparent"></div>
      <!-- Animated dot -->
      <div class="absolute top-1/2 -translate-y-1/2 w-2 h-2 rounded-full bg-primary shadow-[0_0_8px_rgba(99,102,241,0.6)] pipeline-dot"></div>
    </div>

    <!-- Active providers row -->
    <div class="grid grid-cols-4 gap-4 sm:gap-6 md:gap-8 relative z-10">
      {providers.filter(p => p.available).map((provider, i) => (
        <div class={`reveal reveal-delay-${i + 1} group flex flex-col items-center gap-3`}>
          <div class="relative w-16 h-16 sm:w-18 sm:h-18 md:w-20 md:h-20 rounded-2xl backdrop-blur-sm border flex items-center justify-center transition-all duration-300 group-hover:shadow-lg group-hover:scale-105 bg-white dark:bg-neutral-900/80 border-neutral-200 dark:border-neutral-700 group-hover:border-neutral-400 dark:group-hover:border-neutral-500">
            <svg
              class={`w-7 h-7 sm:w-8 sm:h-8 md:w-9 md:h-9 transition-colors duration-300 ${provider.activeColor} ${provider.brandColor}`}
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <Fragment set:html={provider.icon} />
            </svg>
            <span class="absolute -top-1.5 -right-1.5 w-5 h-5 bg-emerald-500 rounded-full flex items-center justify-center shadow-sm">
              <svg class="w-3 h-3 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20 6 9 17 4 12" />
              </svg>
            </span>
          </div>
          <span class="font-heading font-medium text-xs sm:text-sm transition-colors duration-300 text-center leading-tight text-foreground/70 dark:text-neutral-400 group-hover:text-foreground dark:group-hover:text-neutral-200">
            {provider.name}
          </span>
        </div>
      ))}
    </div>

    <!-- Central Viewpo hub (desktop) -->
    <div class="hidden md:flex absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-20 w-10 h-10 rounded-full bg-primary/10 dark:bg-primary/20 border border-primary/30 items-center justify-center pipeline-hub" aria-hidden="true">
      <div class="w-3 h-3 rounded-full bg-primary shadow-[0_0_12px_rgba(99,102,241,0.5)]"></div>
    </div>
  </div>

  <!-- Roadmap integrations -->
  <div class="max-w-3xl mx-auto mt-10 md:mt-12">
    <p class="text-center text-foreground/40 dark:text-neutral-500 text-xs font-mono uppercase tracking-wider mb-5 reveal reveal-delay-3">On the Roadmap</p>
    <div class="grid grid-cols-4 gap-4 sm:gap-6 md:gap-8">
      {providers.filter(p => p.roadmap).map((provider, i) => (
        <div class={`reveal reveal-delay-${Math.min(i + 3, 4)} group flex flex-col items-center gap-3`}>
          <div class="relative w-16 h-16 sm:w-18 sm:h-18 md:w-20 md:h-20 rounded-2xl backdrop-blur-sm border flex items-center justify-center transition-all duration-300 group-hover:shadow-lg group-hover:scale-105 bg-neutral-50/60 dark:bg-neutral-900/40 border-neutral-200/60 dark:border-neutral-800 group-hover:border-neutral-300 dark:group-hover:border-neutral-700">
            <svg
              class={`w-7 h-7 sm:w-8 sm:h-8 md:w-9 md:h-9 transition-colors duration-300 text-neutral-300 dark:text-neutral-700 ${provider.brandColor}`}
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <Fragment set:html={provider.icon} />
            </svg>
            <span class="absolute -top-2 -right-2 text-[8px] font-mono font-semibold uppercase tracking-wider text-neutral-400 dark:text-neutral-500 bg-neutral-100 dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-full px-1.5 py-0.5 leading-none whitespace-nowrap">
              Roadmap
            </span>
          </div>
          <span class="font-heading font-medium text-xs sm:text-sm transition-colors duration-300 text-center leading-tight text-foreground/40 dark:text-neutral-600 group-hover:text-foreground/60 dark:group-hover:text-neutral-400">
            {provider.name}
          </span>
        </div>
      ))}
    </div>
  </div>

  <!-- Roadmap nudge -->
  <p class="text-center text-foreground/40 dark:text-neutral-500 text-sm mt-10 reveal reveal-delay-4">
    Missing your workflow? <a href="/roadmap" class="text-primary hover:underline plausible-event-name=CTA+View+Roadmap">View the public roadmap</a> or <a href="/roadmap#request" class="text-primary hover:underline plausible-event-name=CTA+Request+Feature">request a feature</a>.
  </p>
</Section>

<style>
  @keyframes pipeline-travel {
    0% {
      left: 0%;
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    50% {
      left: 50%;
      opacity: 1;
    }
    52% {
      opacity: 0;
    }
    100% {
      left: 50%;
      opacity: 0;
    }
  }

  @keyframes pipeline-hub-pulse {
    0%, 100% {
      box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.3);
    }
    50% {
      box-shadow: 0 0 0 8px rgba(99, 102, 241, 0);
    }
  }

  .pipeline-dot {
    animation: pipeline-travel 3s ease-in-out infinite;
  }

  .pipeline-hub {
    animation: pipeline-hub-pulse 3s ease-in-out infinite;
    animation-delay: 1.5s;
  }
</style>
