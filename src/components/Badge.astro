---
interface Props {
  variant?: 'default' | 'success' | 'muted' | 'highlight';
  class?: string;
}

const {
  variant = 'default',
  class: className = '',
} = Astro.props;

const variantStyles = {
  default: 'bg-primary/10 text-primary dark:text-indigo-300',
  success: 'bg-emerald-500/10 text-emerald-600 dark:text-emerald-400',
  muted: 'bg-foreground/5 dark:bg-neutral-800 text-foreground/40 dark:text-neutral-500 border border-foreground/10 dark:border-neutral-700',
  highlight: 'bg-sky-500 dark:bg-sky-400 text-white dark:text-neutral-950',
};

const classes = `inline-flex items-center gap-2 text-xs font-heading font-medium px-3 py-1 rounded-full ${variantStyles[variant]} ${className}`;
---

<span class={classes}>
  <slot />
</span>
