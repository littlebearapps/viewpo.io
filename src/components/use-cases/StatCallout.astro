---
import type { StatBlock } from '@/data/use-cases';

interface Props {
  stats: StatBlock[];
  accentText: string;
}

const { stats, accentText } = Astro.props;
---

<div class={`grid grid-cols-2 ${stats.length >= 3 ? 'sm:grid-cols-3' : 'sm:grid-cols-2'} gap-4 my-10 reveal`}>
  {stats.map(stat => (
    <div class="text-center p-4 rounded-xl border border-neutral-200/60 dark:border-neutral-700/30 bg-white/30 dark:bg-neutral-900/20">
      <p class={`text-2xl sm:text-3xl font-heading font-bold ${accentText} mb-1`}>
        {stat.value}
      </p>
      <p class="text-xs text-foreground/50 dark:text-neutral-500 leading-snug">
        {stat.label}
      </p>
      {stat.source && (
        <p class="text-[10px] text-foreground/30 dark:text-neutral-600 mt-1 italic">
          {stat.source}
        </p>
      )}
    </div>
  ))}
</div>
