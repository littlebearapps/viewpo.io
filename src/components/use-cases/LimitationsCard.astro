---
import type { UseCaseLimitations } from '@/data/use-cases';

interface Props {
  limitations: UseCaseLimitations;
}

const { limitations } = Astro.props;
---

<div class="my-12 reveal">
  <div class="max-w-3xl rounded-xl border border-amber-200/60 dark:border-amber-500/15 bg-amber-50/50 dark:bg-amber-500/[0.04] p-6">
    <!-- Header -->
    <div class="flex items-center gap-3 mb-4">
      <div class="w-8 h-8 rounded-lg bg-amber-400/15 flex items-center justify-center flex-shrink-0">
        <svg class="w-4 h-4 text-amber-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
        </svg>
      </div>
      <h3 class="font-heading font-semibold text-base text-amber-800 dark:text-amber-300">
        {limitations.title}
      </h3>
    </div>
    <!-- Items -->
    <ul class="space-y-2">
      {limitations.items.map(item => (
        <li class="flex items-start gap-2.5 text-sm text-amber-900/70 dark:text-amber-200/60 leading-relaxed">
          <svg class="w-4 h-4 mt-0.5 flex-shrink-0 text-amber-400/70" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
          {item}
        </li>
      ))}
    </ul>
  </div>
</div>
