---
/**
 * DeviceMockup â€” placeholder phone frame for the hero section.
 * The screen content will be driven by PersonaDock's active card in a future iteration.
 * For now, shows a generic "preview in progress" skeleton.
 */
---

<div class="device-mockup relative mx-auto" aria-hidden="true">
  <!-- Phone frame -->
  <div class="relative w-[220px] sm:w-[260px] lg:w-[280px] mx-auto">
    <!-- Outer bezel -->
    <div class="rounded-[2.5rem] border-2 border-white/15 bg-slate-900/80 backdrop-blur-sm shadow-2xl shadow-black/30 overflow-hidden">
      <!-- Notch / Dynamic Island -->
      <div class="flex justify-center pt-3 pb-2">
        <div class="w-20 h-5 bg-black rounded-full"></div>
      </div>

      <!-- Screen area -->
      <div class="mx-3 mb-3 rounded-2xl bg-slate-800/60 border border-white/[0.06] overflow-hidden" id="device-screen">
        <!-- Skeleton UI representing a website preview -->
        <div class="p-4 space-y-3">
          <!-- Nav bar skeleton -->
          <div class="flex items-center gap-2">
            <div class="w-8 h-2 bg-white/10 rounded"></div>
            <div class="flex-1"></div>
            <div class="w-12 h-4 bg-indigo-500/30 rounded-md"></div>
          </div>

          <!-- Hero skeleton -->
          <div class="text-center space-y-2 py-4">
            <div class="w-32 h-3 bg-white/10 rounded mx-auto"></div>
            <div class="w-40 h-2 bg-white/[0.06] rounded mx-auto"></div>
            <div class="w-28 h-2 bg-white/[0.06] rounded mx-auto"></div>
            <div class="flex justify-center gap-2 pt-2">
              <div class="w-16 h-5 bg-indigo-500/30 rounded-md"></div>
              <div class="w-16 h-5 bg-white/[0.06] rounded-md border border-white/10"></div>
            </div>
          </div>

          <!-- Feature cards skeleton -->
          <div class="grid grid-cols-2 gap-2">
            <div class="h-16 bg-white/[0.04] rounded-lg border border-white/[0.06] p-2">
              <div class="w-4 h-4 bg-indigo-500/20 rounded mb-1.5"></div>
              <div class="w-12 h-1.5 bg-white/[0.06] rounded"></div>
            </div>
            <div class="h-16 bg-white/[0.04] rounded-lg border border-white/[0.06] p-2">
              <div class="w-4 h-4 bg-orange-500/20 rounded mb-1.5"></div>
              <div class="w-10 h-1.5 bg-white/[0.06] rounded"></div>
            </div>
            <div class="h-16 bg-white/[0.04] rounded-lg border border-white/[0.06] p-2">
              <div class="w-4 h-4 bg-emerald-500/20 rounded mb-1.5"></div>
              <div class="w-14 h-1.5 bg-white/[0.06] rounded"></div>
            </div>
            <div class="h-16 bg-white/[0.04] rounded-lg border border-white/[0.06] p-2">
              <div class="w-4 h-4 bg-sky-500/20 rounded mb-1.5"></div>
              <div class="w-11 h-1.5 bg-white/[0.06] rounded"></div>
            </div>
          </div>

          <!-- Bottom content skeleton -->
          <div class="space-y-1.5 pt-1">
            <div class="w-full h-1.5 bg-white/[0.04] rounded"></div>
            <div class="w-3/4 h-1.5 bg-white/[0.04] rounded"></div>
          </div>
        </div>
      </div>

      <!-- Home indicator -->
      <div class="flex justify-center pb-3">
        <div class="w-28 h-1 bg-white/15 rounded-full"></div>
      </div>
    </div>
  </div>

  <!-- Ambient glow behind device -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[350px] h-[350px] rounded-full bg-primary/15 blur-[120px] -z-10 pointer-events-none"></div>
</div>
