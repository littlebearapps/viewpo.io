---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';

const title = 'Roadmap & Feature Requests â€” Viewpo';
const description = 'See what we\'re building next, vote on features, and suggest new ideas for Viewpo.';
---

<BaseLayout title={title} description={description}>
  <Header slot="header" />

  <section class="py-16 sm:py-24">
    <div class="container-wide">
      <!-- Header -->
      <div class="max-w-2xl mx-auto text-center mb-12">
        <h1 class="text-4xl sm:text-5xl font-heading font-bold text-foreground mb-4">
          Roadmap & Feature Requests
        </h1>
        <p class="text-lg text-foreground/60 leading-relaxed">
          See what we're working on, vote on features that matter to you, and suggest new ideas.
        </p>
      </div>

      <!-- UserJot Embed -->
      <div class="max-w-5xl mx-auto">
        <iframe
          src="https://viewpo.userjot.com"
          width="100%"
          height="800"
          style="border: none; border-radius: 0.75rem;"
          title="Viewpo Roadmap and Feature Requests"
          loading="lazy"
          allow="clipboard-write"
        ></iframe>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>
