---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Section from '@components/Section.astro';
---

<BaseLayout
  title="You're Confirmed â€” Viewpo"
  description="Your email has been confirmed. Welcome to the Viewpo beta list."
>
  <Fragment slot="head">
    <meta name="robots" content="noindex, nofollow" />
  </Fragment>

  <Header slot="header" />

  <Section padding="lg">
    <div class="max-w-lg mx-auto text-center py-12">
      <!-- Success icon -->
      <div class="inline-flex items-center justify-center w-20 h-20 bg-success/10 rounded-full mb-8">
        <svg class="w-10 h-10 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
        </svg>
      </div>

      <h1 class="font-heading font-bold text-3xl md:text-4xl mb-4">
        You're confirmed!
      </h1>

      <p class="text-foreground/60 text-lg leading-relaxed mb-4">
        Thanks for confirming your email. You're on the Viewpo beta list and we'll let you know as soon as spots open up.
      </p>

      <p class="text-foreground/40 text-sm mb-8">
        In the meantime, keep an eye on your inbox for updates from us.
      </p>

      <a
        href="/"
        class="inline-flex items-center justify-center gap-2 font-heading font-medium rounded-xl transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 hover:scale-[1.02] active:scale-[0.98] px-6 py-3 text-base bg-primary text-white hover:bg-primary-hover focus:ring-primary shadow-md hover:shadow-lg"
      >
        Back to Viewpo
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </Section>

  <Footer slot="footer" />
</BaseLayout>
