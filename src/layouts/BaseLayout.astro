---
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'See your preview deploys on any device, at any viewport. One dashboard for Cloudflare Pages, Vercel, Netlify, and GitHub Pages.',
  ogImage = '/og-default.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title} | Viewpo</title>
    <meta name="title" content={`${title} | Viewpo`} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | Viewpo`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | Viewpo`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- Structured Data: Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Viewpo",
      "url": "https://viewpo.io",
      "description": "Preview deployment aggregator with viewport viewer for iOS, iPadOS, and macOS",
      "parentOrganization": {
        "@type": "Organization",
        "name": "Little Bear Apps",
        "url": "https://littlebearapps.com"
      },
      "knowsAbout": ["preview deployments", "viewport testing", "Cloudflare Pages", "Vercel", "Netlify", "responsive design"],
      "areaServed": "Worldwide"
    })} />

    <!-- Structured Data: SoftwareApplication -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      "name": "Viewpo",
      "applicationCategory": "DeveloperApplication",
      "operatingSystem": "iOS, iPadOS, macOS",
      "description": "Aggregates preview deployments from Cloudflare Pages, Vercel, Netlify, and GitHub Pages into one dashboard with a viewport viewer.",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "USD"
      },
      "author": {
        "@type": "Organization",
        "name": "Little Bear Apps",
        "url": "https://littlebearapps.com"
      }
    })} />

    <!-- Fonts preconnect -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Analytics -->
    <script is:inline async src="https://plausible.io/js/pa-XnY0rOrxQvpStF2a1FD0y.js"></script>
    <script is:inline>
      window.plausible=window.plausible||function(){(plausible.q=plausible.q||[]).push(arguments)};plausible.init=plausible.init||function(i){plausible.o=i||{}};
      plausible.init();
    </script>

    <!-- Theme persistence (prevent flash) -->
    <script is:inline>
      (function() {
        const isDark = localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (isDark) document.documentElement.classList.add('dark');
      })();
    </script>

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Page-specific head content -->
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-background text-foreground flex flex-col">
    <!-- Dot grid background texture -->
    <div class="fixed inset-0 bg-dot-pattern pointer-events-none -z-10" aria-hidden="true"></div>

    <!-- Mouse-follow spotlight -->
    <div id="spotlight" class="fixed inset-0 pointer-events-none -z-10 opacity-0 transition-opacity duration-300" aria-hidden="true"
      style="background: radial-gradient(circle 200px at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(99,102,241,0.06), transparent);"></div>

    <slot name="header" />
    <main class="flex-1">
      <slot />
    </main>
    <slot name="footer" />

    <!-- Scroll reveal -->
    <script src="../scripts/scroll-reveal.ts"></script>

    <!-- Mouse-follow spotlight -->
    <script>
      function initSpotlight(): void {
        const el = document.getElementById('spotlight');
        if (!el || window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
        el.style.opacity = '1';
        document.addEventListener('mousemove', (e: MouseEvent) => {
          el.style.setProperty('--mouse-x', e.clientX + 'px');
          el.style.setProperty('--mouse-y', e.clientY + 'px');
        }, { passive: true });
      }
      initSpotlight();
      document.addEventListener('astro:after-swap', initSpotlight);
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
