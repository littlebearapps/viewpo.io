---
import { ViewTransitions } from 'astro:transitions';
import SignupModal from '@components/SignupModal.astro';
import ContactModal from '@components/ContactModal.astro';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const {
  title,
  description = 'See your preview deploys on any device, at any viewport. One dashboard for Cloudflare Pages, Vercel, Netlify, and GitHub Pages.',
  ogImage = '/og-default.png',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const isHomepage = Astro.url.pathname === '/' || Astro.url.pathname === '/index.html';
const currentDate = new Date().toISOString().split('T')[0];
---

<!doctype html>
<html lang="en-AU">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Little Bear Apps" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL.toString()} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site).toString()} />

    <!-- Structured Data: Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Viewpo",
      "url": "https://viewpo.io",
      "logo": "https://viewpo.io/logo.png",
      "description": "Preview deployment aggregator with viewport viewer for iOS, iPadOS, and macOS",
      "parentOrganization": {
        "@type": "Organization",
        "name": "Little Bear Apps",
        "url": "https://littlebearapps.com"
      },
      "knowsAbout": ["preview deployments", "viewport testing", "Cloudflare Pages", "Vercel", "Netlify", "responsive design", "responsive web design", "mobile testing"],
      "sameAs": ["https://github.com/littlebearapps"],
      "areaServed": "Worldwide"
    })} />

    {isHomepage && (
      <Fragment>
        <!-- Structured Data: SoftwareApplication (homepage only) -->
        <script type="application/ld+json" set:html={JSON.stringify({
          "@context": "https://schema.org",
          "@type": "SoftwareApplication",
          "name": "Viewpo",
          "applicationCategory": "DeveloperApplication",
          "applicationSubCategory": "Utility",
          "operatingSystem": ["iOS", "iPadOS", "macOS"],
          "description": "Aggregates preview deployments from Cloudflare Pages, Vercel, Netlify, and GitHub Pages into one dashboard with a viewport viewer.",
          "featureList": [
            "Viewport viewer at any screen resolution",
            "Preview aggregation from multiple hosting providers",
            "Shareable preview links and QR codes",
            "Team workspaces with feedback",
            "Real-time deploy notifications",
            "OAuth account linking"
          ],
          "datePublished": "2026-02-01",
          "dateModified": currentDate,
          "offers": {
            "@type": "Offer",
            "price": "0",
            "priceCurrency": "USD"
          },
          "author": {
            "@type": "Organization",
            "name": "Little Bear Apps",
            "url": "https://littlebearapps.com"
          }
        })} />

        <!-- Structured Data: WebSite (homepage only) -->
        <script type="application/ld+json" set:html={JSON.stringify({
          "@context": "https://schema.org",
          "@type": "WebSite",
          "name": "Viewpo",
          "url": "https://viewpo.io",
          "publisher": {
            "@type": "Organization",
            "name": "Little Bear Apps",
            "url": "https://littlebearapps.com"
          }
        })} />
      </Fragment>
    )}

    <!-- Structured Data: WebPage (all pages) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": title,
      "description": description,
      "url": canonicalURL.toString(),
      "datePublished": "2026-02-01",
      "dateModified": currentDate,
      "inLanguage": "en-AU",
      "isPartOf": {
        "@type": "WebSite",
        "name": "Viewpo",
        "url": "https://viewpo.io"
      }
    })} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Outfit:wght@500;600;700&display=swap" />

    <!-- Turnstile (bot protection for forms) -->
    <script is:inline src="https://challenges.cloudflare.com/turnstile/v0/api.js?render=explicit" async defer></script>

    <!-- Analytics (proxied through viewpo.io for accurate tracking of developer audience) -->
    <script is:inline defer src="/js/script.js"></script>
    <script is:inline>
      window.plausible=window.plausible||function(){(window.plausible.q=window.plausible.q||[]).push(arguments)};plausible.init=plausible.init||function(i){plausible.o=i||{}};
      plausible.init({ endpoint: '/api/event/' });
    </script>

    <!-- Theme persistence (prevent flash + survive View Transitions) -->
    <script is:inline>
      (function() {
        function applyTheme() {
          const isDark = localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches);
          document.documentElement.classList.toggle('dark', isDark);
        }
        applyTheme();
        document.addEventListener('astro:after-swap', applyTheme);
      })();
    </script>

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Page-specific head content -->
    <slot name="head" />
  </head>
  <body class="min-h-screen bg-background text-foreground flex flex-col">
    <!-- Dot grid background texture -->
    <div class="fixed inset-0 bg-dot-pattern pointer-events-none -z-10" aria-hidden="true"></div>

    <!-- Mouse-follow spotlight -->
    <div id="spotlight" class="fixed inset-0 pointer-events-none -z-10 opacity-0 transition-opacity duration-300" aria-hidden="true"
      style="background: radial-gradient(circle 200px at var(--mouse-x, 50%) var(--mouse-y, 50%), rgba(99,102,241,0.06), transparent);"></div>

    <!-- Skip to main content -->
    <a href="#main" class="sr-only focus:not-sr-only focus:fixed focus:top-4 focus:left-4 focus:z-[100] focus:bg-primary focus:text-white focus:px-4 focus:py-2 focus:rounded-lg focus:text-sm focus:font-medium">
      Skip to main content
    </a>

    <slot name="header" />
    <main id="main" class="flex-1">
      <slot />
    </main>
    <slot name="footer" />

    <!-- Global modals -->
    <SignupModal />
    <ContactModal />

    <!-- Scroll reveal -->
    <script src="../scripts/scroll-reveal.ts"></script>

    <!-- Mouse-follow spotlight -->
    <script>
      function initSpotlight(): void {
        const el = document.getElementById('spotlight');
        if (!el || window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
        el.style.opacity = '1';
        document.addEventListener('mousemove', (e: MouseEvent) => {
          el.style.setProperty('--mouse-x', e.clientX + 'px');
          el.style.setProperty('--mouse-y', e.clientY + 'px');
        }, { passive: true });
      }
      initSpotlight();
      document.addEventListener('astro:after-swap', initSpotlight);
    </script>

    <!-- Ad click ID capture (dormant until Google Ads campaigns are active) -->
    <script is:inline>
      (function() {
        var p = new URLSearchParams(window.location.search);
        var g = p.get('gclid');
        if (g) sessionStorage.setItem('gclid', g);
      })();
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
